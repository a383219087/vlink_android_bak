<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="@dimen/segment_stroke"
        android:color="@color/default_segmented_selected_color" />
    <solid android:color="@color/default_segmented_unselected_color" />
    <padding
        android:bottom="@dimen/segment_padding_top_bottom"
        android:left="@dimen/segment_padding_left_right"
        android:right="@dimen/segment_padding_left_right"
        android:top="@dimen/segment_padding_top_bottom" />
    <corners
        android:bottomLeftRadius="@dimen/segment_radius"
        android:topLeftRadius="@dimen/segment_radius" />
</shape>