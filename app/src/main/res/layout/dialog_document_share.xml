<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.ui.documentary.vm.ShareViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

        <import type="com.yjkj.chainup.util.DecimalUtil" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.yjkj.chainup.wedegit.CustomRoundAngleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_document_share"
                    app:left_top_radius="@dimen/dp_15"
                    app:right_top_radius="@dimen/dp_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="27dp"
                        android:gravity="center"
                        android:text="@{_all.bean.contractName}"
                        android:textColor="@color/white"
                        android:textSize="19sp" />

                    <ImageView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_gravity="center"
                        android:layout_marginTop="47dp"
                        android:src="@drawable/personal_headportrait" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="叫我静静"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="@string/dialog_close_text3"
                        android:textColor="#80ffffff"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="@{DecimalUtil.cutValueByPrecision(_all.bean.returnRate+``,2)+`%`}"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:padding="15dp"
                        app:ResColor="@{R.color.black_1a}"
                        app:radius="@{7}"
                        tool:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@string/dialog_close_text1"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/dialog_close_text2"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="@string/dialog_close_text3"
                                android:textColor="@color/white"
                                android:textSize="11sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="@{DecimalUtil.cutValueByPrecision(_all.bean.avgPrice+``,2)}"
                                android:textColor="@color/white"
                                android:textSize="11sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@{DecimalUtil.cutValueByPrecision(_all.bean.closePrice+``,2)}"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:visibility="@{_all.status==0?View.VISIBLE:View.GONE}" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="@{(_all.bean.returnRate>0?`+`:`-`)+DecimalUtil.cutValueByPrecision(_all.bean.keepRate+``,2)+`%`}"
                                android:textColor="@{_all.bean.returnRate>0?@color/green:@color/red}"
                                android:textSize="11sp"
                                android:visibility="@{_all.status==0?View.VISIBLE:View.GONE}" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                app:ResColor="@{R.color.white}"
                app:radius="@{15}">

                <TextView
                    android:layout_width="156dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:gravity="left"
                    android:text="@{`注册邀请码:`+_all.inviteCodeBean.inviteCode}"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/dp_20"
                    app:content="@{_all.inviteCodeBean.inviteCode}" />


            </FrameLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_23"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_13"
            android:onClick="@{()->_all.finish()}"
            android:src="@mipmap/ic_document_share_close" />


    </FrameLayout>


</layout>
