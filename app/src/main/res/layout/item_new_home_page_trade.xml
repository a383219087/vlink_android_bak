<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_122"
    android:layout_height="@dimen/dp_80"
    android:id="@+id/layout_symbol_context"
    android:background="@color/bg_card_color"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_2"
    android:paddingRight="@dimen/dp_2">

    <LinearLayout
        android:id="@+id/layout_symbol_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_new_home_page_trade_symbol"
            style="@style/textStyle_title_14"
            android:fontFamily="@font/dinpro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="btc" />

        <TextView
            android:id="@+id/item_new_home_page_trade_market"
            style="@style/textStyle_title_14"
            android:fontFamily="@font/dinpro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="/btc" />

        <TextView
            android:id="@+id/item_new_home_page_trade_gains"
            android:textSize="@dimen/sp_10"
            android:fontFamily="@font/dinpro_medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/main_red"
            tools:text="0.0%" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_new_home_page_trade_assets"
        android:textSize="@dimen/sp_20"
        android:fontFamily="@font/dinpro_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        tools:text="asdasdasd" />

    <TextView
        android:id="@+id/item_new_home_page_trade_value"
        android:textSize="@dimen/sp_12"
        android:fontFamily="@font/dinpro_medium"
        android:textColor="@color/normal_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        tools:text="~~sajdaskd" />


</LinearLayout>