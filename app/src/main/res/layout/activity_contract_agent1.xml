<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.new_version.activity.invite.vm.ContractAgentViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_bg_image"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner_cn" />

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/ic_return"
                    app:onClick="@{()->_all.finish()}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:visibility="@{_all.codeList.size()==0?View.INVISIBLE:View.VISIBLE}"
                    app:ResColor="@{R.color.white}"
                    app:radius="@{15}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="默认邀请码"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="我的返利/好友返利"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{(100-_all.rate)+`%`}"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{(_all.rate)+`%`}"
                            android:textColor="@color/red"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="邀请码"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{_all.code}"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            app:copyText="@{_all.code}" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="邀请链接"
                            android:textColor="@color/text_color"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{_all.code}"
                            android:textColor="@color/text_color"
                            android:textSize="15sp"
                            app:copyText="@{_all.code}" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="立即邀请"
                        android:textColor="@color/white"
                        app:ResColor="@{R.color.main_blue}"
                        app:radius="@{15}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="更多邀请码"
                        app:onClick="@{()->_all.toMyInviteCodesActivity()}"
                        android:textColor="@color/gray" />

                </LinearLayout>


            </FrameLayout>


        </ScrollView>


    </FrameLayout>


</layout>