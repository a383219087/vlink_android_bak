<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.ui.buy.vm.QuickBuyViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp">

            <ImageView
                style="@style/left_back_img_style"
                android:layout_gravity="center|left"
                android:onClick="@{()->_all.finish()}"
                android:src="@drawable/ic_return" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_8"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_43"
                android:padding="@dimen/dp_15"
                android:src="@mipmap/ic_lishijilu"
                android:onClick="@{()->_all.onclickRightIcon()}"
                android:layout_gravity="right|center"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 USDT ≈ 6.5 CNY"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="10sp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="18dp"
                app:radius="@{10}"
                app:StrColor="@{`#E6E6E6`}"
                android:layout_gravity="center|right"
                android:text="去卖币"
                android:textColor="#616161"
                android:textSize="11sp"
                android:gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CNY"
                    android:padding="8dp"
                    android:drawablePadding="4dp"
                    android:drawableRight="@mipmap/ic_down"
                    android:textColor="#616161"
                    android:textSize="11sp"
                    android:gravity="center" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-5,000,000 CNY"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_50"
                android:textColor="#999999"
                android:textSize="10sp"
                android:gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="20dp"
                    android:layout_weight="1"
                    android:text="Del"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:gravity="center" />





            </LinearLayout>








        </LinearLayout>








        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:text="购买USDT"
            android:onClick="@{()->_all.buy()}"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:gravity="center"
            app:ResColor="@{R.color.main_blue}"
            app:radius="@{5}"/>









    </LinearLayout>


</layout>