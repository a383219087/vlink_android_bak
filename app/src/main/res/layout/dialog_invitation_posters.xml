<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.ui.invite.vm.InvitationPostersViewModel" />

        <import type="com.yjkj.chainup.util.SystemUtils" />


        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:background="@drawable/bg_dialog_invitation">

        <TextView
            android:id="@+id/tv_invitaion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="@string/share_your_tailored_poster" />


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:onClick="@{()->_all.finish()}"
            android:text="@string/common_text_btnCancel"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/ll_share_layout_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invitaion_title"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="357dp"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_exclusive_posters"
                android:onClick="@{()->_all.setShare(0)}"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkbox_invitation"
                    app:cardCornerRadius="@dimen/dp_6">


                    <RelativeLayout
                        android:id="@+id/ll_share_all_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/rl_one_image"
                            android:scaleType="fitXY"
                            android:src="@{SystemUtils.isZh()?@drawable/ic_share_cn_one:@drawable/ic_share_en_one}" />


                        <RelativeLayout
                            android:id="@+id/rl_one_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/tv_iphone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_6"
                                android:text="@{_all.userAccount}"
                                android:textColor="#1F3F59"
                                android:textSize="8sp"
                                android:textStyle="bold"
                                tools:text="ssssss" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_iphone"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_marginBottom="7dp"
                                android:layout_toLeftOf="@+id/tv_invitation_qr_code"
                                android:text="@{_all.navigationContent}"
                                android:textColor="#828EA1"
                                android:textSize="5sp"
                                tools:text="ajsdkaslkdalksjdlaksjdlkas" />

                            <ImageView
                                android:id="@+id/tv_invitation_qr_code"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="7dp"
                                app:bitmap="@{_all.bitmap}"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_marginBottom="@dimen/dp_8" />
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <CheckBox
                    android:id="@+id/checkbox_invitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@null"
                    android:button="@drawable/bg_complaint"
                    android:checked="@{_all.check.equals(`0`)}"
                    android:clickable="false" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="357dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_exclusive_posters"
                android:onClick="@{()->_all.setShare(1)}"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkbox_invitation_2"
                    app:cardCornerRadius="@dimen/dp_6">

                    <RelativeLayout
                        android:id="@+id/ll_share_all_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/rl_two_image"
                            android:src="@{SystemUtils.isZh()?@drawable/ic_share_cn_one:@drawable/ic_share_en_one}"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:id="@+id/rl_two_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/tv_iphone_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_6"
                                android:text="@{_all.userAccount}"
                                android:textColor="#1F3F59"
                                android:textSize="8sp"
                                android:textStyle="bold"
                                tools:text="ssssss" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_iphone_2"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_marginBottom="7dp"
                                android:layout_toLeftOf="@+id/tv_invitation_qr_code_2"
                                android:text="@{_all.navigationContent}"
                                android:textColor="#828EA1"
                                android:textSize="5sp"
                                tools:text="ajsdkaslkdalksjdlaksjdlkas" />

                            <ImageView
                                android:id="@+id/tv_invitation_qr_code_2"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="7dp"
                                app:bitmap="@{_all.bitmap}"
                                android:layout_marginTop="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_6"
                                android:layout_marginBottom="@dimen/dp_8" />
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <CheckBox
                    android:id="@+id/checkbox_invitation_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@null"
                    android:button="@drawable/bg_complaint"
                    android:checked="@{_all.check.equals(`1`)}" />


            </RelativeLayout>
        </LinearLayout>

        <com.yjkj.chainup.new_version.view.CommonlyUsedButton
            android:id="@+id/save_image_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            app:listener="@{_all.listener}"
            android:layout_below="@+id/ll_share_layout_all"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"
            app:bottonTextContent="@string/sl_str_save_image" />


    </RelativeLayout>


</layout>
