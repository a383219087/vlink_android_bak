<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.new_version.activity.financial.vm.HolddetailViewModel" />

        <import type="com.yjkj.chainup.R" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.util.DecimalUtil" />


    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                app:ResColor="@{R.color.white}"
                app:radius="@{15}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:ResColor="@{R.color.warn_yellow}"
                        app:radius="@{10}"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@{_all.bean.projectName}"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=" 产品详情"
                            android:textColor="@color/barcode_possible_result_points"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:text="@{_all.bean.gainRate+`%`}"
                            android:textColor="@color/barcode_viewfinder_laser"
                            android:textSize="13sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=" 固定年化"
                            android:textColor="@color/barcode_possible_result_points"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{`昨日收益（`+_all.bean.gainCoin+`)`}"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@{`累计收益（`+_all.bean.gainCoin+`)`}"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@{`预计年收益（`+_all.bean.gainCoin+`)`}"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{DecimalUtil.cutValueByPrecision(_all.bean.yesterdayUserGainAmount+``,2)}"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@{DecimalUtil.cutValueByPrecision(_all.bean.userGainAmount+``,2)}"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@{DecimalUtil.cutValueByPrecision(_all.bean.almostUserGainAmount+``,2)}"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@{`存入金额（`+_all.bean.gainCoin+`)`}"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{DecimalUtil.cutValueByPrecision(_all.bean.userCurrentAmount+``,2)}"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="全部"
                    android:textSize="15sp"
                    app:ResColor="@{_all.detailType==4?R.color.warn_yellow:R.color.tabbar_divide_color}"
                    android:onClick="@{()->_all.setDetailType(4)}"
                    app:radius="@{20}"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="存入记录"
                    android:textSize="15sp"
                    app:ResColor="@{_all.detailType==1?R.color.warn_yellow:R.color.tabbar_divide_color}"
                    android:onClick="@{()->_all.setDetailType(1)}"
                    app:radius="@{20}"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="收益明细"
                    android:textSize="15sp"
                    app:ResColor="@{_all.detailType==3?R.color.warn_yellow:R.color.tabbar_divide_color}"
                    android:onClick="@{()->_all.setDetailType(3)}"
                    app:radius="@{20}"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="取出记录"
                    android:textSize="15sp"
                    app:ResColor="@{_all.detailType==2?R.color.warn_yellow:R.color.tabbar_divide_color}"
                    android:onClick="@{()->_all.setDetailType(2)}"
                    app:radius="@{20}"/>
            </LinearLayout>
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/twinklingRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:onLoadMoreCommand="@{_all.onLoadMoreCommand}"
                app:onRefreshCommand="@{_all.onRefreshCommand}">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    app:itemBinding="@{_all.itemBinding}"
                    app:items="@{_all.items}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:onClick="@{()->_all.onSave()}"
                app:ResColor="@{R.color.otc_recharge}"
                app:radius="@{10}"
                android:visibility="@{_all.bean.isShowBuy()==1?View.VISIBLE:View.GONE}"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_gravity="center"
                    app:ResColor="@{R.color.warn_yellow}"
                    app:radius="@{10}"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:textSize="18sp"
                    android:text="继续存入"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </View>

            </LinearLayout>

            <LinearLayout
                android:onClick="@{()->_all.onOut()}"
                app:ResColor="@{R.color.otc_recharge}"
                app:radius="@{10}"
                android:layout_margin="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:visibility="@{_all.bean.projectType&lt;2&amp;&amp;_all.queryType==1?View.VISIBLE:View.GONE}"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_gravity="center"
                    app:ResColor="@{R.color.warn_yellow}"
                    app:radius="@{10}"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:textSize="18sp"
                    android:text="取出"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </View>

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>