<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color">

    <include
        android:id="@+id/home_header"
        layout="@layout/activity_home_title" />

    <RelativeLayout
        android:id="@+id/net_wrong"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:visibility="gone"
        android:background="@color/main_red"
        android:layout_below="@id/home_header"
        >
        <ImageView
            android:id="@+id/no_network_remind"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:src="@mipmap/remind"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/no_network_remind"
            android:layout_toLeftOf="@+id/no_network_enter"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/check_network_error_settings"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/no_network_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:src="@mipmap/nonetwork_enter"
            />
    </RelativeLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_below="@id/net_wrong"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <com.youth.banner.Banner
                    android:id="@+id/banner_looper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_138"
                    app:banner_indicator_height="2dp"
                    app:banner_indicator_margin="6dp"
                    app:banner_indicator_normal_color="#5D6D89"
                    app:banner_indicator_normal_width="@dimen/dp_6"
                    app:banner_indicator_selected_color="#D8e1F0"
                    app:banner_indicator_selected_width="@dimen/dp_10"
                    app:banner_indicator_space="@dimen/dp_6"
                    app:banner_radius="@dimen/dp_8" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_advertising_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/bg_card_color"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_advertising"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@mipmap/home_post" />

                <com.yjkj.chainup.wedegit.VerticalTextview4ChainUp
                    android:id="@+id/vtc_advertising"
                    style="@style/textStyle_title_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_nation_more"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@mipmap/home_list" />

            </LinearLayout>

            <View style="@style/common_horizon_line_style" />


            <LinearLayout
                android:id="@+id/layout_top_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_top_24"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/bg_card_color"
                    android:visibility="gone" />


                <com.yjkj.chainup.new_version.view.CommonHorizontalScrollBar
                    android:id="@+id/layout_item"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_2"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:id="@+id/v_top_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color" />


            <RelativeLayout
                android:id="@+id/recycler_center_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_8">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_center_service"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_128" />

                <LinearLayout
                    android:id="@+id/rl_controller"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_below="@id/recycler_center_service"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_frist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_bg_4_homepage_select" />

                    <ImageView
                        android:id="@+id/iv_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_bg_4_homepage_unselect" />


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_custom_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:visibility="gone">

                <com.youth.banner.Banner
                    android:id="@+id/banner_looper_custom"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_16"
                    app:banner_indicator_height="1dp"
                    app:banner_indicator_margin="0dp"
                    app:banner_radius="@dimen/dp_4" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color" />
            <include
                android:id="@+id/no_network_bottom_vp"
                android:visibility="gone"
                layout="@layout/no_network_remind" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tvDocumentary"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="跟单"/>
                <TextView
                    android:id="@+id/tvFinance"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="理财"/>
                <TextView
                    android:id="@+id/tvBinary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:gravity="center"
                    android:text="二元期权"/>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/bottom_vp_linearlayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/stl_homepage_list"
                style="@style/ToolbarType_bar_home_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/bg_card_color"
                app:tl_indicator_color="@color/main_blue" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_color" />

            <com.yjkj.chainup.wedegit.WrapContentViewPager
                android:id="@+id/fragment_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_card_color"
                android:overScrollMode="never" />
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <FrameLayout
        android:id="@+id/rl_red_envelope_entranc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_50">


        <ImageView
            android:id="@+id/rl_red_envelope_entrance"
            android:layout_width="50dp"
            android:layout_height="62.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@drawable/redenvelope" />

        <ImageView
            android:id="@+id/iv_close_red_envelope"
            android:layout_width="21.33dp"
            android:layout_height="22.67dp"
            android:layout_gravity="right"
            android:src="@drawable/delete" />
    </FrameLayout>

</RelativeLayout>