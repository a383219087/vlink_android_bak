<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.ui.financial.vm.UsdtViewModel" />

        <import type="com.yjkj.chainup.R" />

        <import type="android.view.View" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:paddingTop="30dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                style="@style/left_back_img_style"
                android:layout_gravity="center|left"
                android:onClick="@{()->_all.finish()}"
                android:src="@drawable/ic_return" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_8"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_15"
                android:text="@{_all.bean.name}"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="@dimen/dp_15">




                <LinearLayout
                    android:id="@+id/usdt_le2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_15"
                    app:ResColor="@{R.color.white}"
                    app:radius="@{5}"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="当前年化利率"
                            android:textColor="@color/text_color_99"
                            android:textSize="11sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            tools:text="20%"
                            android:text="@{_all.bean.gainRate+ `%`}"
                            android:textSize="@dimen/sp_13"
                            android:textColor="@color/red" />


                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="5dp"
                        android:visibility="@{_all.bean.projectType==0||_all.bean.projectType==1?View.GONE:View.VISIBLE}"
                        android:paddingBottom="5dp"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="高收益，无风险，到期自动回款"
                        android:textColor="@color/text_color"
                        android:textSize="11sp"
                        app:ResColor="@{R.color.main_blue_15}"
                        app:radius="@{15}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:visibility="@{_all.bean.projectType==0||_all.bean.projectType==1?View.VISIBLE:View.GONE}"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="当日存入，次日起息，滚动复利，灵活存取"
                        android:textColor="@color/text_color"
                        android:textSize="11sp"
                        app:ResColor="@{R.color.main_blue_15}"
                        app:radius="@{15}" />

                </LinearLayout>







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:background="@color/main_blue"
                    android:orientation="vertical"
                    android:padding="15dp"
                    app:ResColor="@{R.color.main_blue}"
                    app:topLeftRadius="@{5}"
                    app:topRightRadius="@{5}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定期存款"
                        android:visibility="@{_all.bean.projectType==0||_all.bean.projectType==1?View.GONE:View.VISIBLE}"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活期存款"
                        android:visibility="@{_all.bean.projectType==0||_all.bean.projectType==1?View.VISIBLE:View.GONE}"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="@{_all.bean.projectType==0||_all.bean.projectType==1?View.GONE:View.VISIBLE}"
                        android:text="定期存款是为用户提供的数字货币和法币的资产增值理财计划，用户存入后，即科享受理财期限固定、到期自动回款的理财便利服务。"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="@{_all.bean.projectType==0||_all.bean.projectType==1?View.VISIBLE:View.GONE}"
                        android:text="活期存款是为用户提供的数字货币和法币的资产增值理财计划，用户存入后，即可享受资金快进快出、存取灵活的便利服务。在满足本金安全和流动性需求的基础上力求实现更高的利益。"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:ResColor="@{R.color.white}"
                    app:bottomLeftRadius="@{5}"
                    app:bottomRightRadius="@{5}">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/ic_duoyang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="多样"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/text_color_99"
                            android:text="支持多币种\n多样理财产品"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/ic_zhuanye" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="专业"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/text_color_99"
                            android:text="采用全球领先\n风控体系"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/ic_anquan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="安全"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/text_color_99"
                            android:text="离线存储\n多重授权\n安全透明"
                            android:textSize="11sp" />
                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="vertical"
                    app:ResColor="@{R.color.white}"
                    app:radius="@{5}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:text="存入规则"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:ResColor="@{R.color.main_blue}"
                        app:bottomRightRadius="@{10}"
                        app:topLeftRadius="@{10}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center"
                                app:ResColor="@{R.color.red}"
                                app:radius="@{6}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textColor="@color/text_color"
                                android:text="单笔限额"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/text_color_99"
                            android:layout_marginTop="5dp"
                            android:text="1000-100000 USDT" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center"
                                app:ResColor="@{R.color.red}"
                                app:radius="@{6}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textColor="@color/text_color"
                                android:text="存入时间"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/text_color_99"
                            android:layout_marginTop="5dp"
                            android:text="每日00:00-23:59:59" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:text="收益规则"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        app:ResColor="@{R.color.main_blue}"
                        app:bottomRightRadius="@{10}"
                        app:topLeftRadius="@{10}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center"
                                app:ResColor="@{R.color.red}"
                                app:radius="@{6}" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textColor="@color/text_color"
                                android:text="取出规则"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/text_color_99"
                            android:layout_marginTop="5dp"
                            android:text="随时取出，实时到账" />

                    </LinearLayout>



                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:visibility="@{_all.bean.isShowBuy()==1?View.VISIBLE:View.GONE}"
                    android:onClick="@{()->_all.toSaveActivity()}"
                    android:text="立即存入"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:ResColor="@{R.color.main_blue}"
                    app:radius="@{5}" />


            </LinearLayout>
        </ScrollView>





    </LinearLayout>
</layout>