<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_40"
    android:paddingTop="@dimen/dp_40"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/no_network_bottom_iv"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_140"
        android:src="@mipmap/nonetwork"
        app:layout_constraintBottom_toTopOf="@+id/no_network_check"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/no_network_check"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/dp_60"
        android:paddingRight="@dimen/dp_60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@+id/no_network_retry_btn"
        app:layout_constraintTop_toBottomOf="@+id/no_network_bottom_iv"
        />

    <Button
        android:id="@+id/no_network_retry_btn"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/cp_btn_blue_bg"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:text="@string/check_refresh_more"
        android:textColor="@color/color_nonetwork_btn_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_network_check"
        />

</androidx.constraintlayout.widget.ConstraintLayout>