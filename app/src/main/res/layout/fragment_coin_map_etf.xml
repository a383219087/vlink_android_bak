<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isblack"
            type="Boolean"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_20"
        tools:context="com.yjkj.chainup.new_version.fragment.CoinMapEtfFragment">

        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textColor="@{isblack ? @color/text_color_kline_night : @color/text_color }"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:text="以太坊（Ethereum)" />

        <TextView
            android:id="@+id/tv_coin_etf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_12"
            android:textColor="@{isblack ? @color/normal_text_color_kline_night : @color/text_color }"
            android:textSize="@dimen/sp_14"
            tools:text="@string/etf_notes_explain" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@{isblack ? @color/line_color_kline_night : @color/line_color}" />
        <!--发行时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_publish_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/etf_info_lever"
                android:textColor="@{isblack ? @color/normal_text_color_kline_night : @color/normal_text_color }"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_issue_date"
                style="@style/textStyle_nor_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@{isblack ? @color/text_color_kline_night : @color/text_color }"
                android:textSize="@dimen/sp_14"
                tools:text="2014/07/24" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@{isblack ? @color/line_color_kline_night : @color/line_color}" />

        <!--发行总量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_publish_total_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/etf_text_networth"
                android:textColor="@{isblack ? @color/normal_text_color_kline_night : @color/normal_text_color }"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_auth_amount"
                style="@style/textStyle_nor_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@{isblack ? @color/text_color_kline_night : @color/text_color }"
                android:textSize="@dimen/sp_14"
                tools:text="9631.15 万" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@{isblack ? @color/line_color_kline_night : @color/line_color}" />

        <!--流量总量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_currentTotal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/etf_info_rules"
                android:textColor="@{isblack ? @color/normal_text_color_kline_night : @color/normal_text_color }"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_fluent_amount"
                style="@style/textStyle_nor_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/etf_notes_auto_lever_time"
                android:textColor="@{isblack ? @color/text_color_kline_night : @color/text_color }"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@{isblack ? @color/line_color_kline_night : @color/line_color}" />

        <!--官网-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_web"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/etf_info_rules_no"
                android:textColor="@{isblack ? @color/normal_text_color_kline_night : @color/normal_text_color }"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_official_web"
                style="@style/textStyle_nor_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@{isblack ? @color/text_color_kline_night : @color/text_color }"
                android:textSize="@dimen/sp_14"
                tools:text="https://www.ethereum.org/" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@{isblack ? @color/line_color_kline_night : @color/line_color}" />

        <!--区块查询-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_block"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/sl_str_funds_rate"
                android:textColor="@{isblack ? @color/normal_text_color_kline_night : @color/normal_text_color }"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_block_explorer"
                style="@style/textStyle_nor_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@{isblack ? @color/text_color_kline_night : @color/text_color }"
                android:textSize="@dimen/sp_14"
                tools:text="https://etherscan.io/" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:background="@{isblack ? @color/line_color_kline_night : @color/line_color}" />


    </LinearLayout>


</layout>