<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/page_head_height_44"
    android:gravity="center_vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_personal_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:src="@mipmap/home_avatar" />

        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_weight="1"
            android:background="@drawable/bg_search_coin"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12">

            <ImageView
                android:id="@+id/iv_market_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_search" />

            <TextView
                android:id="@+id/tv_market_search_hint"
                style="@style/textStyle_value_c5_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/charge_action_searchcoin" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_market_msg"
            android:layout_width="@dimen/dp_32"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:src="@mipmap/home_letter" />


    </LinearLayout>

    <View
        android:id="@+id/item_view_market_line"
        style="@style/common_horizon_line_style"
        android:visibility="invisible"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
