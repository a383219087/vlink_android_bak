<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    >
    <TextView
        android:id="@+id/tv_tradle_name"
        style="@style/textStyle_title_16"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_type"
        tools:text="LTC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tv_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="--"
            android:textColor="@color/main_green"
            android:textSize="16sp"
            tools:text="多头" />

        <TextView
            android:id="@+id/tv_symbol_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="--"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="BTC-USDT" />

        <TextView
            android:id="@+id/tv_level_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="--"
            android:textColor="@color/normal_text_color"
            android:textSize="12sp"
            tools:text="全仓 10x" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:text="--"
        android:textColor="@color/normal_text_color"
        android:textSize="14sp"
        tools:text="2019/01/16 15:00:23" />

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_key1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="已实现盈亏(USDT)"
                android:drawableRight="@drawable/sl_contract_prompt"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/main_red"
                android:textSize="14sp"
                tools:text="-1000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_key2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="开仓均价（USDT）"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_value2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                tools:text="-1000" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_key4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="仓位数量（USDT）"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_value4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                tools:text="-1000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_key3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="平仓均价（USDT）"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_value3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                tools:text="-1000" />

        </LinearLayout>

    </LinearLayout>
   <ImageView
       android:layout_marginTop="15dp"
       android:layout_width="match_parent"
       android:background="@color/line_color"
       android:layout_height="0.5dp"/>
</LinearLayout>