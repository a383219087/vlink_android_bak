<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_registration_title_agent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:text="@string/spot_trading_broker" />

    <LinearLayout
        android:id="@+id/ll_spot_agent_rule_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_spot_agent_rule_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/rules_and_regulations"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />

        <!--右箭头-->
        <ImageView
            android:id="@+id/iv_arrow"
            style="@style/right_arrow_img_style"
            android:layout_marginLeft="@dimen/dp_5" />
    </LinearLayout>


    <View
        android:id="@+id/view_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_below="@+id/tv_registration_title_agent"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/new_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_inviter_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_inviter_agent"
                style="@style/BorrowingReturnTitleStyle"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="@string/number_people_invited" />


            <TextView
                android:id="@+id/tv_inviter_content"
                style="@style/BorrowingReturnContentStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/main_blue"
                tools:text="dddddddddd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_commission_ratio_agent"
                style="@style/BorrowingReturnTitleStyle"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="@string/ratio_commission" />


            <TextView
                android:id="@+id/tv_commission_ratio_content"
                style="@style/BorrowingReturnContentStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/text_color"
                tools:text="dddddddddd" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_commission_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_commission"
                style="@style/BorrowingReturnTitleStyle"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="@string/total_commission" />


            <TextView
                android:id="@+id/tv_total_commission_content"
                style="@style/BorrowingReturnContentStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/main_blue"
                tools:text="dddddddddd" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>