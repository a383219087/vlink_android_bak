<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_new_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:fitsSystemWindows="true">

    <com.yjkj.chainup.wedegit.ShareImageView
        android:id="@+id/sv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@color/normal_text_color"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bg_image"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner_cn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_directory_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_steps1_layout"
                        android:layout_width="@dimen/dp_82"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_first_image"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:background="@drawable/icon1" />

                        <TextView
                            android:id="@+id/tv_setps1_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="4"
                            android:text="@string/coAgent_text_agentStepA"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_first_image"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_toLeftOf="@id/ll_steps2_layout"
                        android:background="@drawable/arrow" />

                    <LinearLayout
                        android:id="@+id/ll_steps2_layout"
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:background="@drawable/icon2" />

                        <TextView
                            android:id="@+id/tv_setps2_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="4"
                            android:text="@string/coAgent_text_agentStepB"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_second_image"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_12"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_toRightOf="@+id/ll_steps2_layout"
                        android:background="@drawable/arrow" />

                    <LinearLayout
                        android:id="@+id/ll_steps3_layout"
                        android:layout_width="@dimen/dp_82"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_toRightOf="@+id/iv_second_image"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:background="@drawable/icon3" />

                        <TextView
                            android:id="@+id/tv_setps3_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="4"
                            android:text="@string/coAgent_text_agentStepC"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/view_contract_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/bg_color" />

                <include
                    android:id="@+id/item_invitation_layout"
                    layout="@layout/item_invitation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="165dp" />

                <View
                    android:id="@+id/view_contract_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/bg_color" />

                <include
                    android:visibility="gone"
                    android:id="@+id/item_invitation_registration_rewards"
                    layout="@layout/item_invitation_registration_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="131dp" />
                <include
                    android:visibility="gone"
                    android:id="@+id/item_invitation_registration_rewards"
                    layout="@layout/item_invitation_registration_rewards"
                    android:layout_width="match_parent"
                    android:layout_height="131dp" />
                <LinearLayout
                    android:id="@+id/ll_contract_agent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_registration_title_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_16"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:text="金牌经纪人" />
                        <LinearLayout
                            android:id="@+id/ll_spot_agent_rule_description_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_spot_agent_rule_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/rules_and_regulations"
                                android:textColor="@color/normal_text_color"
                                android:textSize="@dimen/sp_12"
                                android:visibility="visible" />

                            <!--右箭头-->
                            <ImageView
                                android:id="@+id/iv_arrow"
                                style="@style/right_arrow_img_style"
                                android:layout_marginLeft="@dimen/dp_5" />
                        </LinearLayout>

                    </RelativeLayout>
                    <View
                        android:id="@+id/view_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_half"
                        android:layout_below="@+id/tv_registration_title_agent"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/new_line" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_line_1"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_inviter_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/BorrowingReturnTitleStyle"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/coAgent_text2" />


                            <TextView
                                android:id="@+id/tv_direct_commission"
                                style="@style/BorrowingReturnContentStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="---" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView

                                style="@style/BorrowingReturnTitleStyle"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/coAgent_text3" />


                            <TextView
                                android:id="@+id/tv_secondary_commission"
                                style="@style/BorrowingReturnContentStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="---" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_commission_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView

                                style="@style/BorrowingReturnTitleStyle"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/coAgent_text4" />


                            <TextView
                                android:id="@+id/tv_subbroker_commission"
                                style="@style/BorrowingReturnContentStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="---" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_line_1"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/BorrowingReturnTitleStyle"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/coAgent_text6" />


                            <TextView
                                android:id="@+id/tv_customers_number"
                                style="@style/BorrowingReturnContentStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="---" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView

                                style="@style/BorrowingReturnTitleStyle"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/coAgent_text7" />


                            <TextView
                                android:id="@+id/tv_accumulated_commission"
                                style="@style/BorrowingReturnContentStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="---" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_line_1"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/BorrowingReturnTitleStyle"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/coAgent_text8" />


                            <TextView
                                android:id="@+id/tv_yesterday_commission"
                                style="@style/BorrowingReturnContentStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="---" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                style="@style/BorrowingReturnTitleStyle"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/coAgent_text9" />


                            <TextView
                                android:id="@+id/tv_previousday_commission"
                                style="@style/BorrowingReturnContentStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="---" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view_contract_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/bg_color" />
                </LinearLayout>



                <include
                    android:id="@+id/item_spot_agent"
                    layout="@layout/item_spot_agent"
                    android:layout_width="match_parent"
                    android:layout_height="131dp" />


                <View
                    android:id="@+id/view_contract_line_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_below="@+id/item_spot_agent"
                    android:background="@color/bg_color" />


                <include
                    android:id="@+id/item_contract_agent_content"
                    layout="@layout/item_contract_agent_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_contract_line_3"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="-1dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl_back_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/ic_return"
            android:tint="@color/white" />

        <!--        <TextView-->
        <!--            android:id="@+id/tv_right_title"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginRight="@dimen/dp_15"-->
        <!--            android:ellipsize="end"-->
        <!--            android:maxLines="1"-->
        <!--            android:singleLine="true"-->
        <!--            android:text="@string/coAgent_text_explain"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="@dimen/sp_14" />-->
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/rl_red_envelope_entranc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_50">


        <ImageView
            android:id="@+id/rl_red_envelope_entrance"
            android:layout_width="50dp"
            android:layout_height="62.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@drawable/redenvelope" />

        <ImageView
            android:id="@+id/iv_close_red_envelope"
            android:layout_width="21.33dp"
            android:layout_height="22.67dp"
            android:layout_gravity="right"
            android:src="@drawable/delete" />
    </FrameLayout>


</RelativeLayout>