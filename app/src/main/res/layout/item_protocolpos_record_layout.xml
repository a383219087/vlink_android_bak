<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_30"
    >

    <TextView
        android:id="@+id/tv_miningType"
        style="@style/ScreeningPopup"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/pos_type_staking"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        tools:text="挖矿类型"
        />

    <com.yjkj.chainup.wedegit.LineAdapter4FundsLayout
        android:id="@+id/ll_pos_record_mining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/tv_symbol"
        style="@style/ScreeningPopup"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/pos_string_coinName"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        tools:text="币种"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_15"
        >


        <TextView
            android:id="@+id/tv_play_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp_14"
            />

        <com.yjkj.chainup.new_version.view.CustomizeEditText
            android:id="@+id/et_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_toLeftOf="@+id/tv_play_type"
            android:background="@null"
            android:clickable="true"
            android:hint="@string/filter_Input_placeholder"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/sp_14"
            />


        <View
            android:id="@+id/view_line_pos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_half"
            android:layout_below="@id/et_symbol"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/line_color"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_date"
        style="@style/ScreeningPopup"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/charge_text_date"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        />

    <!--日期-->
    <com.yjkj.chainup.new_version.view.SelectDateView
        android:id="@+id/sdv_asset_top_up_pos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
