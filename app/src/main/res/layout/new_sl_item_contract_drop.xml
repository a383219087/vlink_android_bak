<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_rose"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="-16.68%"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:stv_corner="@dimen/dp_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_rose"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_10"
                    android:text="11"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/tv_coin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_toRightOf="@id/tv_ranking"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:text="LTC" />

                <TextView
                    android:id="@+id/tv_market_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_toRightOf="@id/tv_coin_name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:paddingTop="3dp"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="/ETH" />


                <!--24H交易量-->
                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_coin_name"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_toRightOf="@id/tv_ranking"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="24H量 123457900000000000000"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--收盘价
            app:layout_constraintWidth_percent="0.3"-->
                <TextView
                    android:id="@+id/tv_close_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="5734.580000000000000011111"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <!--app:layout_constraintHorizontal_bias="0.3"-->
                <TextView
                    android:id="@+id/tv_close_price_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/dp_3"
                    android:text="¥3.14"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/item_view_market_line"
        style="@style/common_horizon_line_style"
        android:layout_below="@id/content_ll"
        android:layout_marginTop="@dimen/dp_12" />
</RelativeLayout>