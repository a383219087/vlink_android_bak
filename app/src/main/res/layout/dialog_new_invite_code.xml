<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.ui.invite.vm.EditInviteCodesViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:radius="@{10}"
            app:ResColor="@{R.color.bg_card_color}"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@{_all.type==1?`生成新邀请码`:`修改邀请码`}"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="好友返利比例"
                android:textColor="@color/text_color"
                android:textSize="12sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_about"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"
                app:itemBinding="@{_all.itemBinding}"
                app:items="@{_all.items}"
                app:spanCount="5"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的返利比例"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@{(100-_all.rate)+`%`}"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/otc_bg_cancel_btn"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:text="@={_all.remark}"
                android:layout_marginRight="15dp"
                android:hint="备注信息"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingLeft="@dimen/dp_5"
                android:button="@drawable/cp_trade_check_selector"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:layout_gravity="left"
                android:checked="@={_all.isCheck()}"
                android:text="设为默认邀请码"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_30"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/otc_bg_cancel_btn"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:onClick="@{()->_all.finish()}"
                    android:singleLine="true"
                    android:text="取消"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/sp_16" />

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@drawable/otc_bg_confirm_able"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="确定"
                    app:onClick="@{()->_all.onSure()}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>



</layout>
