<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/bg_dialog_invitation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_invitaion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请邀请名额"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/common_text_btnCancel"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请数量"
        android:layout_marginTop="30dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yjkj.chainup.new_version.view.CustomizeEditText
            android:id="@+id/ce_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/app_logo"
            android:layout_marginTop="@dimen/dp_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/common_tip_inputPhoneOrMail"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/et_cursor_color"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="人"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
    <View
        android:id="@+id/v_line_num"
        style="@style/common_horizon_line_style"
        android:layout_below="@+id/ce_account"
        android:background="@color/new_edit_line_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请描述"
        android:layout_marginTop="30dp"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yjkj.chainup.new_version.view.CustomizeEditText
            android:id="@+id/ce_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@+id/app_logo"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="@string/common_tip_inputPhoneOrMail"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/et_cursor_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        style="@style/common_horizon_line_style"
        android:layout_below="@+id/ce_account"
        android:background="@color/new_edit_line_color" />


    <com.yjkj.chainup.new_version.view.CommonlyUsedButton
        android:id="@+id/save_image_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/ll_share_layout_all"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        app:bottonTextContent="申请" />


</LinearLayout>