<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_card_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/pos_state_rules"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:text="PoS细则" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/line_color" />



    <TextView
        android:layout_marginBottom="@dimen/dp_20"
        android:id="@+id/tv_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12"
        tools:text="1. 这里是详细的细则这\n\n2. 这里是详细的细则这里是详细的细则这里是详细的细则这里是\n\n详细的细则这里是详细的细则这里是详细的\n\n3. 这里是详细的细则这里\n\n4. 这里是详细的细则这里是详细的细则\n" />

    <CheckBox
        android:id="@+id/cb_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:button="@drawable/checkbox_selector"
        android:checked="false"
        android:padding="@dimen/dp_8"
        android:text="@string/pos_sting_potocolTitle"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_14"
        android:visibility="visible"
        tools:text="本人承诺已充分知晓项目风险" />

    <Button
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/agreebtn_unclick"
        android:enabled="false"
        android:text="@string/pos_sting_agree"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="同意PoS" />
</LinearLayout>
