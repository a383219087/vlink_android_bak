<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        
        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_22"/>

        <TextView
            android:id="@+id/tv_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/new_text_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="BTC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center|right"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_1st_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00000000"
                android:layout_marginLeft="@dimen/dp_17"
                android:textColor="@color/text_color"
                android:fontFamily="@font/dinpro_medium"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_4th_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈¥0.00"
                android:layout_marginLeft="@dimen/dp_17"
                android:fontFamily="@font/dinpro_regular"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/line_color" />

    <ImageView
        android:id="@+id/img_coin_tip"
        android:layout_width="14dp"
        android:visibility="gone"
        android:layout_height="14dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/assets_prompt" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_1st_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assets_text_available"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_1st_title"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="123123" />


        <TextView
            android:id="@+id/tv_2nd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/assets_text_freeze"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_2nd_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_2nd_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="123123" />

        <TextView
            android:id="@+id/tv_3rd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_1st_value"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/assets_text_lockup"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_3rd_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_3rd_title"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="123123" />


        <TextView
            android:id="@+id/tv_4th_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_2nd_value"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/assets_text_equivalence"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_4th_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="123123" />

        <TextView
            android:id="@+id/tv_5th_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_3rd_value"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="@string/common_text_limitAvailable" />

        <TextView
            android:id="@+id/tv_5th_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_5th_title"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            tools:text="123123" />

    </RelativeLayout>


</LinearLayout>