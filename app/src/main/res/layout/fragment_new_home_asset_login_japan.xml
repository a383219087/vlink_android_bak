<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_138"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:background="@mipmap/banner_japan"
    android:paddingTop="@dimen/dp_22"
    android:paddingBottom="@dimen/dp_26">

    <RelativeLayout
        android:id="@+id/rl_japan_asset_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30">

        <TextView
            android:id="@+id/tv_total_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_text_assets"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_hide_asset_japan"
            android:layout_width="17dp"
            android:layout_height="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/visible_japan" />

        <TextView
            android:id="@+id/tv_assets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_total_amount_title"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/assets_text_total"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_assets_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_assets_btc_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold"
                tools:text="3345.00645678" />

            <TextView
                android:id="@+id/tv_assets_legal_currency_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:text="≈¥186801525" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>