<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_safety_advice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/item_color"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/img_safety_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/assets_safetyadvice" />

        <TextView
            android:id="@+id/tv_safety_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_safety_advice"
            android:text="@string/assets_security_advice"
            android:textColor="@color/main_blue"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_assets_theme_4"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="@string/otc_text_adLook"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingRight="15dp"
        android:paddingBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_assets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/proposal"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/assets_total_balances"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_assets_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_assets_btc_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4B5687"
                android:textSize="20sp"
                android:fontFamily="@font/dinpro_bold"
                tools:text="3345.00645678" />

            <TextView
                android:id="@+id/tv_assets_legal_currency_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/dinpro_medium"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp"
                android:visibility="invisible"
                tools:text="≈¥186801525" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_hide_asset"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/show_assets" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_assets_theme_line_4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/bg_assets_item_4"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_today_pl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:drawableRight="@mipmap/proposal_3"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:text="@string/assets_security_advice1"
                android:textColor="@color/main_blue"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="@dimen/dp_12"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="@string/assets_security_advice2"
                    android:textColor="@color/new_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="0%"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/dinpro_medium"
                    android:textColor="@color/green"
                    android:textSize="20sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="@dimen/dp_12"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="@string/assets_security_advice4"
                    android:textColor="@color/new_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_usdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="0.00"
                        android:fontFamily="@font/dinpro_medium"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/green"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_cny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="≈ ¥0.00"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/dinpro_medium"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>



            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">


        <TextView
            android:id="@+id/ll_transfer_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@mipmap/button_1"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            android:text="@string/assets_action_transfer"
            android:gravity="center"/>
        <TextView
            android:id="@+id/ll_otc_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@mipmap/button_2"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            android:text="@string/assets_action_withdraw"
            android:gravity="center"/>
        <TextView
            android:id="@+id/ll_top_up_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@mipmap/button_3"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/assets_action_chargeCoin"
            android:gravity="center"/>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/bg_color"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="@dimen/dp_12"
        android:textColor="@color/main_blue"
        android:text="@string/assets_action_transfer1"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otc_bibi_account"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:textColor="@color/new_text_color"
            android:textSize="@dimen/sp_14"
            android:fontFamily="@font/dinpro_medium"
            android:drawableLeft="@mipmap/account"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|right">

            <TextView
                android:id="@+id/tv_assets_action_bibi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.000"
                android:fontFamily="@font/dinpro_bold"
                android:gravity="center"
                android:textColor="@color/new_text_color"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/tv_assets_action_fabi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈ ¥0.0"
                android:fontFamily="@font/dinpro_medium"
                android:gravity="center"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>





    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/bg_divide_color"/>
    <LinearLayout
        android:id="@+id/ll_heyue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance_contract_account"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:textColor="@color/new_text_color"
            android:textSize="@dimen/sp_14"
            android:fontFamily="@font/dinpro_medium"
            android:drawableLeft="@mipmap/account"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|right">

            <TextView
                android:id="@+id/tv_assets_action_bibi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.000"
                android:gravity="center"
                android:textColor="@color/new_text_color"
                android:fontFamily="@font/dinpro_bold"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/tv_assets_action_fabi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈ ¥0.0"
                android:gravity="center"
                android:fontFamily="@font/dinpro_medium"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>





    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/bg_divide_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assets_text_otc"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:fontFamily="@font/dinpro_medium"
            android:textColor="@color/new_text_color"
            android:textSize="@dimen/sp_14"
            android:drawableLeft="@mipmap/account"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|right">

            <TextView
                android:id="@+id/tv_assets_action_bibi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.000"
                android:gravity="center"
                android:fontFamily="@font/dinpro_bold"
                android:textColor="@color/new_text_color"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/tv_assets_action_fabi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈ ¥0.0"
                android:gravity="center"
                android:fontFamily="@font/dinpro_medium"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>