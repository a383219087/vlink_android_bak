<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_safety_advice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/item_color"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/img_safety_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/assets_safetyadvice" />

        <TextView
            android:id="@+id/tv_safety_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_safety_advice"
            android:text="@string/assets_security_advice"
            android:textColor="@color/main_blue"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_assets_theme_4"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="@string/otc_text_adLook"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_contract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingRight="15dp"
        android:paddingBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_assets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/proposal"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/assets_total_balances"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_assets_title"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_assets_btc_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4B5687"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="3345.00645678" />

            <TextView
                android:id="@+id/tv_assets_legal_currency_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/normal_text_color"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:text="≈¥186801525" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_hide_asset"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/show_assets" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_assets_theme_line_4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/bg_assets_item_4"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:drawableRight="@mipmap/proposal_3"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:text="@string/assets_security_advice1"
                android:textColor="@color/main_blue"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_12"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="@string/assets_security_advice2"
                    android:textColor="@color/new_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="+ 0.80%"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/green"
                    android:textSize="20sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_12"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="@string/assets_security_advice4"
                    android:textColor="@color/new_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="+ 0.80%"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/green"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="≈ ¥6529.60"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>



            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


</LinearLayout>