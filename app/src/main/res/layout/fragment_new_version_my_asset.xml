<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/assest_title_color"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleGravity="center"
                app:collapsedTitleTextAppearance="@style/assets_title"
                app:contentScrim="@color/assest_title_color"
                android:minHeight="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/assest_title_color"
                    android:orientation="vertical"
                    android:paddingTop="40dp"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:id="@+id/ll_contract"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_assets_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/assets_total_balances"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_assets_title"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_assets_btc_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="3345.00645678"
                                android:textColor="@color/white"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_assets_legal_currency_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                tools:text="≈¥186801525"
                                android:visibility="invisible"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    app:layout_collapseMode="pin"
                    android:background="@color/transparent">
                    <TextView
                        android:id="@+id/tv_title_top"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:background="@color/transparent"
                        android:textAppearance="@style/assets_title"
                        android:text="@string/mainTab_text_assets" />
                </androidx.appcompat.widget.Toolbar>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48">
                    <ImageView
                        android:id="@+id/iv_hide_asset"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/assets_visible" />
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <ImageView
                android:id="@+id/img_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:src="#3B77E5"
                android:visibility="gone" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/stl_assets_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/assest_title_color"
                app:tl_indicator_color="@color/white"
                app:tl_indicator_corner_radius="@dimen/dp_4"
                app:tl_indicator_height="@dimen/dp_3"
                app:tl_indicator_width="@dimen/dp_20"
                app:tl_indicator_width_equal_title="false"
                app:tl_tab_space_equal="true"
                app:tl_textBold="SELECT"
                app:tl_textSelectColor="@color/white"
                app:tl_textUnSelectColor="#81A7EF"
                app:tl_textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/rl_safety_advice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/assets_safety_color"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/img_safety_advice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/assets_safetyadvice" />

                <TextView
                    android:id="@+id/tv_safety_advice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_safety_advice"
                    android:text="@string/assets_security_advice"
                    android:textColor="@color/main_blue"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/otc_text_adLook"
                    android:textColor="@color/main_blue"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_otc_asset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_card_color"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/rl_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_head_height"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/mainTab_text_assets"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_15"
            android:src="@drawable/visible" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_my_asset_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title_layout"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:visibility="gone" />


</LinearLayout>