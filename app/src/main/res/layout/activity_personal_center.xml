<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.yjkj.chainup.new_version.view.PersonalCenterView
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            app:personalTitle=""
            app:showRightIc="false"
            app:showTitle="false" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--等级费率-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_level_rate"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:background="@color/bg_card_color"
                    android:visibility="gone"
                    app:StatusText=""
                    app:icon="@drawable/personal_grade"
                    app:itemTitle="@string/transfer_text_gradeRate"
                    app:showLine="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/bg_color" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/bg_color"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:background="@mipmap/bg_share"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_46"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="33dp"
                                android:layout_weight="1"
                                android:gravity="center|left"
                                android:text="呼朋唤友 共赴未来"
                                android:textColor="#2B4DE7"
                                android:textSize="24sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_25"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@drawable/bg_share_type"
                                android:drawableRight="@mipmap/ic_white_next"
                                android:drawablePadding="8dp"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:text="去邀请"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_26"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp_32"
                                    android:gravity="bottom"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/personal_text_message2"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />


                                    <TextView
                                        android:id="@+id/tv_share_data1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />


                                </LinearLayout>

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp_32"
                                    android:gravity="bottom"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/personal_text_message3"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/tv_share_data2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />



                                </LinearLayout>

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_gravity="center|left">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp_19"
                                    android:gravity="bottom"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/personal_text_message4"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/tv_share_data3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />



                                </LinearLayout>

                            </FrameLayout>


                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>




                <!--用户信息-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_mail"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:background="@color/bg_card_color"
                    app:icon="@drawable/personal_mail"
                    app:itemTitle="@string/personal_text_message11111"
                    app:showLine="true" />

                <!--身份验证-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_announcement"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:background="@color/bg_card_color"
                    app:icon="@drawable/personal_notice"
                    app:itemTitle="@string/personal_text_notice1"
                    app:showLine="true" />

                <!--客服-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_service"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:background="@color/bg_card_color"
                    android:visibility="gone"
                    app:icon="@drawable/personal_onlineservice"
                    app:itemTitle="@string/personal_text_onlineservice"
                    tools:visibility="visible" />






                <!--安全中心-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_safe_enter"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:background="@color/bg_card_color"
                    app:icon="@drawable/personal_securitycenter"
                    app:itemTitle="@string/personal_text_safetycenter"
                    app:showLine="true" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/bg_color" />

                <!--帮助中心-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_help_center"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:background="@color/bg_card_color"
                    app:icon="@drawable/personal_helpcenter"
                    app:itemTitle="@string/personal_text_helpcenter"
                    app:showLine="false" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/bg_color" />
                <!--设置-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_setting"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:background="@color/bg_card_color"
                    app:icon="@drawable/personal_setting"
                    app:itemTitle="@string/personal_text_setting"
                    app:showLine="true" />


                <!--屏蔽名单-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_mine_black_list"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:visibility="gone"
                    android:background="@color/bg_card_color"
                    app:icon="@drawable/personal_blacklist"
                    app:itemTitle="@string/personal_text_blacklist"
                    app:showLine="true" />

                <!--关于我们-->
                <com.yjkj.chainup.new_version.view.AccountItemView
                    android:id="@+id/aiv_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="46.5dp"
                    android:background="@color/bg_card_color"
                    app:icon="@drawable/personal_aboutus"
                    app:itemTitle="@string/personal_text_aboutus"
                    android:visibility="gone"
                    app:showLine="true" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>