<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.ui.buy.vm.QuickBuySureViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp">

            <ImageView
                style="@style/left_back_img_style"
                android:layout_gravity="center|left"
                android:onClick="@{()->_all.finish()}"
                android:src="@drawable/ic_return" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_8"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CNY"
                    android:padding="8dp"
                    android:drawablePadding="4dp"
                    android:textColor="#616161"
                    android:textSize="11sp"
                    android:gravity="center" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您将获得约1538.46 USDT"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_50"
                android:textColor="#999999"
                android:textSize="10sp"
                android:gravity="center" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/text_color_ee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:onClick="@{()->_all.setIndex(1)}"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="12dp"
                android:layout_marginLeft="26dp"
                android:src="@mipmap/ic_c2c_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="C2C买币"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#000000"
                android:textSize="13sp"
                android:gravity="left" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"

                android:layout_marginRight="25dp"
                android:src="@mipmap/ic_check" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/text_color_ee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:onClick="@{()->_all.setIndex(2)}"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="12dp"
                android:layout_marginLeft="26dp"
                android:src="@mipmap/xanpool" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xanpool"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/viettelpay"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第三方服务商"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="21dp"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    android:gravity="left" />


            </FrameLayout>


            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="25dp"
                android:src="@mipmap/ic_check" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/text_color_ee" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:gravity="center"
            app:ResColor="@{R.color.main_blue}"
            app:radius="@{5}" />


    </LinearLayout>


</layout>