<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60">

    <TextView
        android:id="@+id/tv_contract_name"
        style="@style/textStyle_title_16"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_8"
        tools:text="LTC" />


    <TextView
        android:id="@+id/tv_contract_info"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/normal_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/tv_contract_name"
        app:layout_constraintTop_toTopOf="@id/tv_contract_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_contract_name"
        tools:text="LTC" />


    <TextView
        android:id="@+id/tv_contract_detail"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/normal_text_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_contract_name"
        android:layout_marginBottom="@dimen/dp_8"
        tools:text="LTC" />

    <TextView
        android:id="@+id/tv_last_price"
        style="@style/textStyle_title_16"
        android:textColor="@color/text_black"
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="@dimen/dp_8"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="5734.580000" />


    <TextView
        android:id="@+id/tv_price_detail"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/normal_text_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_last_price"
        android:layout_marginBottom="@dimen/dp_8"
        tools:text="0" />


    <com.coorchice.library.SuperTextView
        android:id="@+id/tv_contract_chg"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="6"
        android:layout_marginEnd="@dimen/dp_16"
        android:maxLines="1"
        android:text="-16.68%"
        android:textColor="@color/white"
        style="@style/textStyle_while_14"
        app:stv_corner="@dimen/dp_4"
        app:stv_solid="@color/main_blue_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/line_color" />

</androidx.constraintlayout.widget.ConstraintLayout>

