<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:fillViewport="true"
    tools:context="com.yjkj.chainup.treaty.fragment.EntrustDealFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        >

        <TextView
            android:id="@+id/tv_choose_contract"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:drawableRight="@drawable/ic_arrow_new_down"
            android:gravity="center"
            android:text="--"
            tools:text="BCH *永续(25x)"
            android:textColor="@color/main_font_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_toLeftOf="@id/iv_price_trend"
            android:gravity="center"
            android:textColor="@color/red"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            tools:text="44.55" />

        <ImageView
            android:id="@+id/iv_price_trend"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_5"
            android:layout_toLeftOf="@id/iv_market_detail"
            tools:src="@drawable/ic_price_descend" />


        <ImageView
            android:id="@+id/iv_market_detail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_trade_hover" />

    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="#253357"
        android:visibility="gone" />

    <View style="@style/common_horizon_line_style"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_select_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="300x"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            app:stv_corner="@dimen/dp_4"
            app:stv_solid="@color/main_color"
            app:stv_stroke_color="@color/transparent"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.yjkj.chainup.treaty.ComTitleValueView
                android:id="@+id/tv_contract_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:bottomValue="--"
                app:isRollback="true"
                app:topTitle="@string/journalAccount_text_contract" />

            <com.yjkj.chainup.treaty.ComTitleValueView
                android:id="@+id/tv_realised_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:bottomValue="--"
                app:isRollback="true"
                app:topTitle="@string/title_rate_of_return" />

            <com.yjkj.chainup.treaty.ComTitleValueView
                android:id="@+id/tv_open_position_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                app:bottomValue="--"
                app:isRollback="true"
                app:topTitle="@string/contract_open_position_price" />

            <com.yjkj.chainup.treaty.ComTitleValueView
                android:id="@+id/tv_liquidation_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                app:bottomValue="--"
                app:isRollback="true"
                app:isShowTips="true"
                app:topTitle="@string/liquidation_price" />


        </LinearLayout>

    </LinearLayout>


    <View style="@style/common_horizon_line_style"
        android:layout_marginLeft="@dimen/dp_15"/>
    <!--中间的交易部分-->
    <include layout="@layout/layout_trade_treaty" />

        <View style="@style/common_horizon_line_style"
            android:layout_marginLeft="@dimen/dp_15"/>
    <!--委托订单-->
    <include layout="@layout/layout_entrust_orders_treaty" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
