<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trade_spot_content_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/bg_card_color"
        app:elevation="@dimen/global_appbar_elevation">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="enterAlways|scroll|snap">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">


                <LinearLayout
                    android:id="@+id/ll_title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_btn_lines"
                    android:orientation="horizontal">


                    <com.coorchice.library.SuperTextView
                        android:id="@+id/btn_bb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/mainTab_text_transaction"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:stv_corner="@dimen/dp_3"
                        app:stv_left_bottom_corner="true"
                        app:stv_left_top_corner="true"
                        app:stv_right_bottom_corner="true"
                        app:stv_right_top_corner="true"
                        app:stv_solid="@color/main_blue"
                        app:stv_stroke_color="@color/line_color"
                        app:stv_stroke_width="@dimen/dp_1" />

                    <com.coorchice.library.SuperTextView
                        android:id="@+id/btn_grid"
                       android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/quant_grid_title"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:stv_corner="@dimen/dp_3"
                        app:stv_left_bottom_corner="true"
                        app:stv_left_top_corner="true"
                        app:stv_right_bottom_corner="true"
                        app:stv_right_top_corner="true"
                        app:stv_stroke_color="@color/line_color"
                        app:stv_stroke_width="@dimen/dp_1" />

                    <com.coorchice.library.SuperTextView
                        android:id="@+id/btn_lever"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/leverage_text_leverage"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:stv_corner="@dimen/dp_3"
                        app:stv_left_bottom_corner="true"
                        app:stv_left_top_corner="true"
                        app:stv_right_bottom_corner="true"
                        app:stv_right_top_corner="true"
                        app:stv_stroke_color="@color/line_color"
                        app:stv_stroke_width="@dimen/dp_1" />

                    <com.coorchice.library.SuperTextView
                        android:id="@+id/btn_otc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/leverage_text_leverage"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold"
                        app:stv_corner="@dimen/dp_3"
                        app:stv_left_bottom_corner="true"
                        app:stv_left_top_corner="true"
                        app:stv_right_bottom_corner="true"
                        app:stv_right_top_corner="true"
                        app:stv_stroke_color="@color/line_color"
                        app:stv_stroke_width="@dimen/dp_1" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>

