<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_contract_share_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_documentary_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        android:text="@string/contract_copy_trade"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="@string/common_text_close"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_share_content_layout"
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_documentary_share"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_5"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14"
            tools:text="yingsssjj" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/head_portrait" />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="ssssssssssss" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14">

            <ImageView
                android:id="@+id/tv_swipe_down"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_32"
                android:padding="5dp"
                android:src="@drawable/icon_swipe_down" />

            <ImageView
                android:id="@+id/tv_swipe_next"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_32"
                android:padding="5dp"
                android:src="@drawable/icon_swipe_next" />


            <TextView
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/dp_12"
                tools:text="累计盈利(USDT)" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_profit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toLeftOf="@+id/tv_swipe_next"
                android:layout_toRightOf="@+id/tv_swipe_down"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/dp_24"
                tools:text="累计盈利(USDT)" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/tv_qr_code"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/contract_scan_code_start"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="102dp"
        android:layout_height="@dimen/dp_18"
        android:layout_below="@+id/ll_share_content_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18" />

    <TextView
        android:id="@+id/tv_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_share_content_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_18"
        android:text="-数字货币交易平台"
        android:textColor="@color/normal_text_color"
        android:textSize="@dimen/sp_12" />


</RelativeLayout>