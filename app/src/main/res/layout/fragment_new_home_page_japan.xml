<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.new_version.home.vm.NewVersionJapanHomePageViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>
<RelativeLayout
    android:id="@+id/v_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color">

    <include
        android:id="@+id/home_header"
        app:vm="@{_all}"
        layout="@layout/activity_home_title" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:setOnScrollChangeListener="@{_all.toTopBar}"
        android:layout_below="@id/home_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <include
                android:id="@+id/fragment_new_home_asset_login_japan"
                layout="@layout/fragment_new_home_asset_login_japan"
                android:visibility="gone" />

            <include
                android:id="@+id/fragment_new_home_asset_unlogin_japan"
                layout="@layout/fragment_new_home_asset_nologin_japan"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_advertising_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/bg_card_color"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_advertising"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@mipmap/home_post" />

                <com.yjkj.chainup.wedegit.VerticalTextview4ChainUp
                    android:id="@+id/vtc_advertising"
                    style="@style/textStyle_title_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_nation_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@mipmap/home_list" />

            </LinearLayout>

            <View
                android:id="@+id/ll_advertising_line"
                style="@style/common_horizon_line_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_card_color"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <com.youth.banner.Banner
                    android:id="@+id/banner_looper"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@drawable/item_japan_banner_bg"
                    app:banner_indicator_height="1dp"
                    app:banner_indicator_margin="0dp"
                    app:banner_radius="@dimen/dp_4" />

            </RelativeLayout>

            <View
                android:id="@+id/v_top_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color" />


            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/stl_homepage_list"
                style="@style/ToolbarType_bar_home_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/bg_card_color"
                app:tl_indicator_color="@color/main_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_half"
                android:background="@color/line_color" />

            <com.yjkj.chainup.wedegit.WrapContentViewPager
                android:id="@+id/fragment_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_card_color"
                android:overScrollMode="never" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/rl_red_envelope_entranc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_50">


        <ImageView
            android:id="@+id/rl_red_envelope_entrance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@drawable/redenvelope" />

        <ImageView
            android:id="@+id/iv_close_red_envelope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/delete" />
    </FrameLayout>

</RelativeLayout>

</layout>