<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_bg_item_for_depth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical" />

    <LinearLayout
        android:id="@+id/ll_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_price_item_for_depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:text="--"
                style="@style/textStyle_text_nor_12"
                tools:text="0.3200" />

            <View
                android:id="@+id/im_sell"
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:background="@drawable/red_dot"
                android:visibility="gone" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_quantity_item_for_depth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:text="--"
            style="@style/textStyle_text_nor_12"
            tools:text="0.3200" />


        <TextView
            android:id="@+id/tv_trend_item_for_depth"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>