<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.new_version.activity.financial.vm.HoldViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <LinearLayout
         android:orientation="vertical"
         android:layout_margin="15dp"
         android:padding="15dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <LinearLayout
             android:orientation="vertical"
             android:padding="15dp"
             app:ResColor="@{R.color.warn_yellow}"
             app:radius="@{10}"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:text="总存款"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginLeft="15dp"
                    app:ResColor="@{R.color.warn_yellow}"
                    app:radius="@{10}"
                    android:layout_width="30dp"
                    android:layout_height="20dp"/>

            </LinearLayout>

             <LinearLayout
                 android:layout_marginTop="5dp"
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

                 <TextView
                     android:textSize="25sp"
                     android:text="@{_all.bean.totalUserCurrentAmount+``}"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_marginLeft="5dp"
                     android:textSize="18sp"
                     android:text="@{_all.bean.countryCoin}"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <View
                     app:ResColor="@{R.color.warn_yellow}"
                     app:radius="@{10}"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="20dp"/>

                 <View
                     android:layout_gravity="center"
                     app:ResColor="@{R.color.warn_yellow}"
                     app:radius="@{10}"
                     android:layout_width="30dp"
                     android:layout_height="30dp"/>

                 <View
                     android:layout_gravity="center"
                     android:layout_marginLeft="15dp"
                     app:ResColor="@{R.color.warn_yellow}"
                     app:radius="@{10}"
                     android:layout_width="30dp"
                     android:layout_height="30dp"/>

             </LinearLayout>

             <TextView
                 android:layout_marginTop="5dp"
                 android:text="@{`≈`+_all.bean.totalUserCurrentAmountCom+_all.bean.comCoin}"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>


             <View
                 android:layout_marginTop="10dp"
                 app:ResColor="@{R.color.tabbar_divide_color}"
                 app:radius="@{10}"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"/>


             <LinearLayout
                 android:layout_marginTop="5dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:textSize="12sp"
                     android:text="@{`昨日收益（`+_all.bean.comCoin+`)`}"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"/>

                 <TextView
                     android:gravity="right"
                     android:textSize="12sp"
                     android:layout_width="0dp"
                     android:text="@{`总收益（`+_all.bean.comCoin+`)`}"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"/>
             </LinearLayout>

             <LinearLayout
                 android:layout_marginTop="5dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:textSize="12sp"
                     android:text="@{_all.bean.totalYesterdayUserGainAmount+``}"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"/>

                 <TextView
                     android:gravity="right"
                     android:layout_marginRight="10dp"
                     android:textSize="12sp"
                     android:layout_width="0dp"
                     android:text="@{_all.bean.totalUserGainAmount+``}"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"/>
             </LinearLayout>

         </LinearLayout>

         <LinearLayout
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 app:ResColor="@{_all.queryType==1?R.color.warn_yellow:R.color.tabbar_divide_color}"
                 app:radius="@{5}"
                 android:text="持仓中"
                 android:onClick="@{()->_all.setQuery(1)}"
                 android:padding="5dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <TextView
                 android:layout_marginLeft="10dp"
                 app:ResColor="@{_all.queryType==0?R.color.warn_yellow:R.color.tabbar_divide_color}"
                 app:radius="@{5}"
                 android:text="历史持仓"
                 android:onClick="@{()->_all.setQuery(0)}"
                 android:padding="5dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

         </LinearLayout>
         <com.scwang.smartrefresh.layout.SmartRefreshLayout
             android:id="@+id/twinklingRefreshLayout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:onLoadMoreCommand="@{_all.onLoadMoreCommand}"
             app:onRefreshCommand="@{_all.onRefreshCommand}">

         <androidx.recyclerview.widget.RecyclerView
             android:layout_marginTop="10dp"
             app:itemBinding="@{_all.itemBinding}"
             app:items="@{_all.items}"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
         </com.scwang.smartrefresh.layout.SmartRefreshLayout>
     </LinearLayout>


 </LinearLayout>


</layout>