<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_20"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="17dp"
            android:layout_marginTop="@dimen/dp_3"
            android:src="@drawable/assets_address_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址一"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:id="@+id/ll_certification"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_13"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_withdraw_trust"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_certification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/common_text_already_trust"
                        android:textColor="@color/main_blue"
                        android:textSize="9sp" />

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_address_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="dasdasdasd"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:id="@+id/rl_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text=""
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="asdjhcadhugbcnsuhdgacvuiebdfcavs" />

                <ImageView
                    android:id="@+id/iv_address_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/assets_selected"
                    android:visibility="gone" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


    <View
        style="@style/common_horizon_line_style"
        android:layout_marginTop="@dimen/dp_10" />

</LinearLayout>