<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.ui.invite.vm.MyInviteViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_30"
        android:background="#F5F5F5">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="15dp"
            app:layout_scrollFlags="noScroll"
            android:gravity="center"
            android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_27"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    app:ResColor="@{_all.index==0?R.color.main_blue:R.color.new_home_page_tab_color}"
                    android:gravity="center"
                    android:onClick="@{()->_all.setIndex(0)}"
                    android:text="好友列表"
                    android:textColor="@{_all.index==0?@color/text_color:@color/white}"
                    android:textSize="15sp" />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_27"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    app:ResColor="@{_all.index==0?R.color.main_blue:R.color.new_home_page_tab_color}"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:onClick="@{()->_all.setIndex(1)}"
                    android:text="我的返利"
                    android:textColor="@{_all.index==1?@color/text_color:@color/white}"
                    android:textSize="15sp" />






        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:select="@{_all.index}"
            app:addOnPageChangeListener="@{_all.onPageChangeListener}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>



    </LinearLayout>


</layout>