<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:background="@color/bg_card_color"
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginTop="70dp"
            app:expandedTitleMarginStart="@dimen/dp_15"
            app:expandedTitleTextAppearance="@dimen/sp_28"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:subtitleTextAppearance="@dimen/sp_14"
            app:titleEnabled="true"
            app:title="USDT"
            app:titleTextColor="@color/text_color">

        <LinearLayout
            android:layout_marginTop="120dp"
            app:layout_collapseParallaxMultiplier="0.7"
            app:layout_collapseMode="parallax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_card_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:text="@string/sl_str_buy_open"
                    android:textColor="@color/main_red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_contract_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:layout_toRightOf="@+id/tv_type"
                    android:text="--"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    tools:text="BCHUSDT永续" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_deal_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contract_text_dealAverage"
                        android:textColor="@color/hint_color"
                        android:textSize="12sp"
                        tools:text="成交均价（USDT）" />

                    <TextView
                        android:id="@+id/tv_deal_price_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        android:text="--"
                        tools:text="4632" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_20">

                    <TextView
                        android:id="@+id/tv_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sl_str_make_volume_unit"
                        android:textColor="@color/hint_color"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_volume_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="7dp"
                        android:text="--"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        tools:text="4632" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sl_str_fee"
                        android:textColor="@color/hint_color"
                        android:textSize="12sp"
                        tools:text="手续费 (BTC)" />

                    <TextView
                        android:id="@+id/tv_fee_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="7dp"
                        android:text="--"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        tools:text="4632" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:gravity="center_vertical"
            android:id="@+id/toolbar"
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/return_daytime"
            app:titleTextColor="@color/text_color" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <LinearLayout
            android:id="@+id/ll_list_tips"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/assets_warning"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_order_tips"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                tools:text="仓位发生强平，未成交委托被系统撤销"
                android:textColor="@color/main_blue"
                android:textSize="12sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_list_title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/bg_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_card_color"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="@string/cl_trades_list_str"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_card_color"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_deal_price_key"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.5"
                    android:gravity="center|left"
                    android:text="@string/sl_str_deal_price"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_trades_volume_key"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/sl_str_make_volume_unit"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_fee_key"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="@string/cl_commission_str"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_card_color"
        android:minHeight="500dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:itemCount="20"
        tools:listitem="@layout/cl_item_deal_order" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>