<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.yjkj.chainup.new_version.activity.financial.vm.HoldViewModel.Item" />

        <import type="com.yjkj.chainup.R" />

        <import type="android.view.View" />
        <variable
            name="onItemListener"
            type="com.yjkj.chainup.new_version.activity.financial.vm.HoldViewModel.OnItemListener" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:onClick="@{()->onItemListener.onClick(item)}"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:ResColor="@{R.color.white}"
        app:radius="@{15}">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center"
                app:ResColor="@{R.color.warn_yellow}"
                app:radius="@{10}"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </View>
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="@{item.item.projectName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <View
                android:layout_gravity="center"
                app:ResColor="@{R.color.warn_yellow}"
                app:radius="@{10}"
                android:layout_width="20dp"
                android:layout_height="20dp">
            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12sp"
                android:text="@{`昨日收益（`+item.item.gainCoin+`)`}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:text="@{`累计收益（`+item.item.gainCoin+`)`}"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:text="@{`预计年收益（`+item.item.gainCoin+`)`}"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12sp"
                android:text="@{item.item.yesterdayUserGainAmount+``}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:text="@{item.item.userGainAmount+``}"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:text="@{item.item.almostUserGainAmount+``}"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:text="@{`数量（`+item.item.gainCoin+`)`}"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:text="@{item.item.userCurrentAmount+``}"
            android:layout_height="wrap_content" />


    </LinearLayout>


</layout>