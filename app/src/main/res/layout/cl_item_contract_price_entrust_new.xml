<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_15">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_color" />
    <LinearLayout
        android:id="@+id/ll_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            >

            <TextView
                android:id="@+id/tv_type_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:paddingRight="3dp"
                android:text="@string/sl_str_buy_open"
                android:textColor="@color/main_red"
                android:textSize="16sp"
                />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_contract_name_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_type_plan"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8px"
                android:text="--"
                tools:text="BCHUSDT永续"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_time_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_type_plan"
                android:layout_marginTop="3dp"
                android:text="--"
                tools:text="2019/01/16 15:00:23"
                android:textColor="@color/normal_text_color"
                android:textSize="14sp" />


            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_cancel_plan"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:gravity="center"
                app:stv_corner="1.5px"
                android:visibility="gone"
                app:stv_solid="@color/tabbar_color"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/main_blue"
                android:textSize="14sp"
                android:text="@string/sl_str_cancel_order" />

            <ImageView
                android:id="@+id/img_error_tips"
                android:layout_toLeftOf="@+id/tv_status_plan"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:src="@drawable/sl_contract_prompt"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="visible"
                android:id="@+id/tv_status_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/dp_3"
                android:layout_centerVertical="true"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp"
                android:text="@string/sl_str_cancel_order"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_trigger_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sl_str_trigger_price"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="@dimen/dp_3"
                    android:id="@+id/tv_hold_value_1_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    tools:text="4042"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hold_layout2"
                android:paddingLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hold_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cl_order_price_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="@dimen/dp_3"
                    android:id="@+id/tv_hold_value_2_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    tools:text="653212"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_hold_layout3"
                android:paddingLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hold_3_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cl_order_volume_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="@dimen/dp_3"
                    android:id="@+id/tv_hold_value_3_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    tools:text="653212"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_hold_layout4"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_hold_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cl_reduce_only_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_hold_value_4_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    tools:text="42"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hold_layout5"
                android:paddingLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_hold_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contract_text_type"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hold_value_5_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    tools:text="PostOnly" />
            </LinearLayout>
            <LinearLayout
                android:paddingLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cl_trigger_time_str"
                    tools:text="@string/cl_trigger_time_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hold_value_6_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    tools:text="10:20:03" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_type_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3dp"
                        android:text="@string/sl_str_buy_open"
                        android:textColor="@color/main_red"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_contract_name_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8px"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="--"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="BCHUSDT永续" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_type"
                    android:layout_marginTop="3dp"
                    android:text="--"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp"
                    tools:text="2019/01/16 15:00:23" />
            </LinearLayout>


            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_cancel_common"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/sl_str_cancel_order"
                android:visibility="gone"
                android:textColor="@color/main_blue"
                android:textSize="14sp"
                app:stv_corner="1.5px"
                app:stv_solid="@color/tabbar_color" />
            <LinearLayout
                android:id="@+id/ll_order_type_common"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="3dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_order_type_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="未成交"
                    tools:visibility="visible" />
                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/sl_contract_arrow_right"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <!--委托价格 (BTC)-->
            <com.yjkj.chainup.contract.widget.ContractUpDownItemLayout
                android:id="@+id/item_entrust_price_common"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:sl_itemTitle="@string/sl_str_entrust_price_unit" />
            <!--委托数量(张)-->
            <com.yjkj.chainup.contract.widget.ContractUpDownItemLayout
                android:id="@+id/item_entrust_volume_common"
                android:layout_width="0dp"
                android:paddingLeft="@dimen/dp_10"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:sl_itemTitle="@string/sl_str_entrust_volume" />
            <!--是否为只减仓-->
            <LinearLayout
                android:id="@+id/ll_only_reduce_position_common"
                android:paddingLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_only_reduce_position_common_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cl_order_volume_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />
                <TextView
                    android:layout_marginTop="@dimen/dp_3"
                    android:id="@+id/tv_only_reduce_position_common_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    tools:text="653212"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>


            <com.yjkj.chainup.contract.widget.ContractUpDownItemLayout
                android:id="@+id/item_only_reduce_position_common"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                app:sl_itemTitle="只减仓" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">


            <!--成交均价-->
            <com.yjkj.chainup.contract.widget.ContractUpDownItemLayout
                android:id="@+id/item_entrust_value_common"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:sl_itemTitle="@string/cl_average_price_str" />

            <!--成交数量 (张)-->
            <com.yjkj.chainup.contract.widget.ContractUpDownItemLayout
                android:id="@+id/item_volume_value_common"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_10"
                app:sl_itemTitle="@string/sl_str_make_volume_unit" />

            <!--类型 -->
            <LinearLayout
                android:id="@+id/item_order_type_common"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_item_order_type_common_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cl_type_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_item_order_type_common_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        tools:text="653212"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/img_liquidation_tip"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/sl_contract_prompt"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <com.yjkj.chainup.contract.widget.ContractUpDownItemLayout

                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:sl_itemTitle="@string/cl_type_str" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>