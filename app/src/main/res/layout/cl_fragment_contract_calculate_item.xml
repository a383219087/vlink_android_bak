<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <!--方向-->
            <RelativeLayout
                android:id="@+id/rl_direction_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sl_item_height"
                android:background="@color/bg_card_color">

                <TextView
                    android:id="@+id/tv_direction_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sl_str_direction"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    style="@style/right_arrow_img_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_direction_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="17dp"
                    android:text="@string/sl_str_long"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <View
                    style="@style/common_horizon_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sl_item_height"
                android:background="@color/bg_card_color">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/title_lever"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tv_leverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="17dp"
                    android:text="20X"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <View
                    style="@style/common_horizon_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>


            <!--计算类型-->
            <RelativeLayout
                android:id="@+id/rl_calculate_type_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sl_item_height"
                android:background="@color/bg_card_color"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sl_str_calculate_type"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    style="@style/right_arrow_img_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_calculate_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="17dp"
                    android:text="@string/sl_str_profit_value"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <View
                    style="@style/common_horizon_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/sl_border_gray_transparent"
                android:paddingLeft="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="right"
                        android:inputType="number"
                        android:maxLength="3"
                        android:text="10"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_sub"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:paddingTop="21dp"
                        android:paddingBottom="21dp"
                        android:src="@drawable/exchange_reduction" />

                    <ImageView
                        android:id="@+id/tv_add"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:padding="15dp"
                        android:src="@drawable/exchange_increase" />
                </LinearLayout>
            </RelativeLayout>
            <com.yjkj.chainup.contract.widget.bubble.BubbleSeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                app:bsb_hide_bubble="true"
                app:bsb_max="100"
                app:bsb_min="1"
                app:bsb_progress="1"
                app:bsb_second_track_color="@color/main_blue"
                app:bsb_second_track_drawable="@drawable/sl_icon_circle_small"
                app:bsb_section_count="5"
                app:bsb_section_text_color="@color/normal_text_color"
                app:bsb_section_text_position="below_section_mark"
                app:bsb_section_text_size="12sp"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="false"
                app:bsb_thumb_drawable="@drawable/sl_icon_circle_big"
                app:bsb_thumb_radius="15dp"
                app:bsb_thumb_radius_on_dragging="12dp"
                app:bsb_track_color="@color/normal_text_color"
                app:bsb_track_drawable="@drawable/sl_icon_circle_small_default" />

            <TextView
                android:id="@+id/tv_amount_user_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="当前杠杆持仓上限10000 BTC" />

            <!--杠杆倍数-->
            <RelativeLayout
                android:id="@+id/rl_leverage_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sl_item_height"
                android:background="@color/bg_card_color"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_lever_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/contract_text_lever"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    style="@style/right_arrow_img_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_leverage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="17dp"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <View
                    style="@style/common_horizon_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--开仓价格-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_open_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cl_calculator_text12"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_open_price_title"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_open_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/contract_text_price"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_open_price_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USDT"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    style="@style/common_horizon_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <!--平仓价格/目标收益额-->
            <RelativeLayout
                android:id="@+id/rl_extras_layout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_extras_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sl_str_close_position_price"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_extras_title"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_extras"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/contract_text_price"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_extras_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="USDT"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    style="@style/common_horizon_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--仓位-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv_position_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/charge_text_volume"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_position_title"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_position"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/charge_text_volume"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_position_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sl_str_contracts_unit"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    style="@style/common_horizon_line_style"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_tips_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="@string/common_text_tip"
                android:textColor="@color/hint_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_contract_calculator_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:lineSpacingExtra="@dimen/dp_2"
                android:text="@string/sl_str_contract_calculator_tips"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <com.yjkj.chainup.new_version.view.CommonlyUsedButton
                android:id="@+id/btn_calculate"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_20"
                app:bottonTextContent="@string/sl_str_calculator" />
        </LinearLayout>
    </LinearLayout>
</ScrollView></RelativeLayout>