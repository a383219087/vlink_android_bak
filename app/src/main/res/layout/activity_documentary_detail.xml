<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="_all"
            type="com.yjkj.chainup.new_version.activity.documentary.vm.DocumentaryDetailViewModel" />

        <import type="android.view.View" />

        <import type="com.yjkj.chainup.R" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp">

            <ImageView
                style="@style/left_back_img_style"
                android:layout_gravity="center|left"
                android:onClick="@{()->_all.finish()}"
                android:src="@drawable/ic_return" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/dp_8"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_15"
                android:text="持仓详情"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="15dp"
            app:ResColor="@{R.color.white}"
            app:radius="@{15}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:text="BCH永续/USDT" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:text="空-20X" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:onClick="@{()->_all.onShareClick()}"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:text="分享" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="开仓均价"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_99" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="平仓价"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_99" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="收益率"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_99" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="301.81"
                    android:textSize="12sp"
                    android:textColor="@color/text_color" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="301.81"
                    android:textSize="12sp"
                    android:textColor="@color/text_color" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="+4.23%"
                    android:textSize="12sp"
                    android:textColor="@color/green" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="7dp"
                    app:onClick="@{()->_all.onShareClick1()}"
                    app:radius="@{5}"
                    app:ResColor="@{R.color.text_color_99}"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="追加本金"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="7dp"
                    app:onClick="@{()->_all.onShareClick2()}"
                    app:radius="@{5}"
                    app:ResColor="@{R.color.text_color_99}"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="止盈止亏"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="7dp"
                    app:onClick="@{()->_all.onShareClick3()}"
                    app:radius="@{5}"
                    app:ResColor="@{R.color.text_color_99}"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="平仓"
                    android:textColor="@color/text_color"
                    android:textSize="13sp" />

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="操作记录"
            android:textColor="@color/text_color"
            android:textSize="16sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content"
            app:itemBinding="@{_all.itemBinding}"
            app:items="@{_all.items}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



    </LinearLayout>


</layout>