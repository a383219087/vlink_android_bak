<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_safety_advice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/item_color"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/img_safety_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/assets_safetyadvice" />

        <TextView
            android:id="@+id/tv_safety_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_safety_advice"
            android:text="@string/assets_security_advice"
            android:textColor="@color/main_blue"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_assets_theme_4"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="@string/otc_text_adLook"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_card_color"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_assets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text_color"
            android:textSize="12sp"
            tool:text="币币资产折合 (BTC)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_assets_title"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_assets_btc_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00000000"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_assets_legal_currency_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="≈¥0.00"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hide_asset"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/show_assets" />

            <ImageView
                android:id="@+id/img_assets_pie_chart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/assets_piechart"
                android:visibility="gone"
                tool:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_heyue_balance"
        android:layout_width="match_parent"
        tool:visibility="visible"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DADADA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_86"
            android:orientation="horizontal">
            
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/sl_str_margin_balance1"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp"
                    tool:text="币币资产折合 (BTC)" />
                <TextView
                     android:id="@+id/tv_bibi_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00000000"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_fabi_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="≈¥0.00"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />




            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#DADADA"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/sl_str_margin_balance2"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp"
                    tool:text="币币资产折合 (BTC)" />
                <TextView
                    android:id="@+id/tv_bibi_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00000000"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_fabi_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="≈¥0.00"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />




            </LinearLayout>
            


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DADADA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_86"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_12"
                android:text="@string/sl_str_margin_balance3"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp"
                tool:text="币币资产折合 (BTC)" />
            <TextView
                android:id="@+id/tv_bibi_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00000000"
                android:layout_marginLeft="@dimen/dp_17"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fabi_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈¥0.00"
                android:layout_marginLeft="@dimen/dp_17"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />




        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="#DADADA" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_income"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/bg_assets_theme_line_4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/bg_assets_item_4"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_today_pl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_36"
                android:drawableRight="@mipmap/proposal_3"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:text="@string/assets_security_advice1"
                android:textColor="@color/main_blue"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="@string/assets_security_advice2"
                    android:textColor="@color/new_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center|left"
                    android:text="+0%"
                    android:textColor="@color/green"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="@string/assets_security_advice4"
                    android:textColor="@color/new_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_usdt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center|left"
                        android:text="0.00"
                        android:textColor="@color/green"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_cny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center|left"
                        android:text="≈ ¥0.00"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bibi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ll_transfer_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@mipmap/button_1"
            android:gravity="center"
            android:text="@string/assets_action_transfer"
            android:textColor="@color/main_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ll_otc_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@mipmap/button_2"
            android:gravity="center"
            android:text="@string/assets_action_withdraw"
            android:textColor="@color/main_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ll_top_up_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@mipmap/button_3"
            android:gravity="center"
            android:text="@string/assets_action_chargeCoin"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_heyue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ll_transfer_layout1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@mipmap/button_1"
            android:gravity="center"
            android:text="@string/assets_action_transfer"
            android:textColor="@color/main_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ll_transfer_layout2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@mipmap/button_2"
            android:gravity="center"
            android:text="@string/assets_action_contractNote"
            android:textColor="@color/main_blue"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fabi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/bg_card_color"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_payment_methods_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_paymentmethod" />

            <TextView
                android:id="@+id/tv_noun_order_paymentTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noun_order_paymentTerm"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transfer_layout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_transfer" />

            <TextView
                android:id="@+id/tv_assets_action_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_action_transfer"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_funds_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_capitalflow" />

            <TextView
                android:id="@+id/tv_assets_action_journalaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_action_journalaccount"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/v_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/line_color"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ll_contract_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_card_color"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_withdraw_text_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/withdraw_text_available"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_contract_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contract_text_positionMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/contract_text_positionMargin"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_contract_position_margin_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_balance"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contract_text_orderMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/contract_text_orderMargin"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_contract_order_margin_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:id="@+id/rl_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/bg_card_color">

        <CheckBox
            android:id="@+id/fragment_my_asset_order_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/img_small_assets_tip"
            android:button="@drawable/new_hide_small_symbol"
            android:checked="false"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:text="@string/assets_action_privacy"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/img_small_assets_tip"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/assets_doubt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/fragment_my_asset_order_hide"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/search" />

            <com.yjkj.chainup.new_version.view.CustomizeEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_card_color"
                android:gravity="center_vertical"
                android:hint="@string/assets_action_search"
                android:imeOptions="normal"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textCursorDrawable="@drawable/et_cursor_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/line_color" />

</LinearLayout>