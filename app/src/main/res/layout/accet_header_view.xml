<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_card_color"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_assets_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp"
                tool:text="币币资产折合 (BTC)" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assets_title"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_assets_btc_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00000000"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_assets_legal_currency_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="≈¥0.00"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_assets_pie_chart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/assets_piechart"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/bg_card_color"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_loan_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_borrow" />

            <TextView
                android:id="@+id/tv_leverage_borrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leverage_borrow"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_top_up_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_deposit" />

            <TextView
                android:id="@+id/tv_assets_action_chargeCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_action_chargeCoin"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_otc_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_withdraw" />

            <TextView
                android:id="@+id/tv_assets_action_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_action_withdraw"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_payment_methods_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_paymentmethod" />

            <TextView
                android:id="@+id/tv_noun_order_paymentTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noun_order_paymentTerm"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transfer_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_transfer" />

            <TextView
                android:id="@+id/tv_assets_action_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_action_transfer"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_red_envelope_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_redenvelope" />

            <TextView
                android:id="@+id/tv_redpacket_redpacket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/redpacket_redpacket"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_funds_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_capitalflow" />

            <TextView
                android:id="@+id/tv_assets_action_journalaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_action_journalaccount"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contract_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                style="@style/assets_page_img_style"
                android:src="@drawable/assets_capitalflow" />

            <TextView
                android:id="@+id/tv_assets_action_contractNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assets_action_contractNote"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <!--合约体验金-->
        <FrameLayout
            android:id="@+id/ll_contract_coupon_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/assets_page_img_style"
                    android:src="@drawable/sl_contract_swap_gift" />

                <TextView
                    android:id="@+id/tv_contract_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contract_swap_gift"
                    android:textColor="@color/normal_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/sl_tag_blue_fill"
                android:paddingLeft="3dp"
                android:paddingTop="1dp"
                android:paddingRight="3dp"
                android:paddingBottom="1dp"
                android:text="NEW"
                android:textColor="@color/white"
                android:textSize="9sp" />

        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/v_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/line_color"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ll_contract_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_card_color"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_withdraw_text_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/withdraw_text_available"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contract_text_positionMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/contract_text_positionMargin"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_balance"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contract_text_orderMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/contract_text_orderMargin"
                android:textColor="@color/normal_text_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="11dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:id="@+id/rl_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/bg_card_color">

        <CheckBox
            android:id="@+id/fragment_my_asset_order_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/img_small_assets_tip"
            android:button="@drawable/new_hide_small_symbol"
            android:checked="false"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/assets_action_privacy"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/img_small_assets_tip"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/assets_doubt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/fragment_my_asset_order_hide"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/search" />
            <com.yjkj.chainup.new_version.view.CustomizeEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:background="@color/bg_card_color"
                android:gravity="center_vertical"
                android:hint="@string/assets_action_search"
                android:textCursorDrawable="@drawable/et_cursor_color"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="normal"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/sp_12"/>

        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/line_color" />

</LinearLayout>