<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_card_color"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/tv_tradle_name"
        style="@style/textStyle_title_16"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_15"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_type"
        tools:text="LTC" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/ll_contract_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:text="卖"
                android:textSize="@dimen/sp_16"
                tools:textColor="@color/main_red" />

            <TextView
                android:id="@+id/tv_coin_name"
                style="@style/textStyle_title_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_side"
                android:text="LTC/USDT" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/ll_contract_info"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                style="@style/textStyle_nor_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/normal_text_color"
                android:singleLine="true"
                android:text="2017-10-10 18:18" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_order_type"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center"
                android:text="Maker"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_10"
                app:stv_solid="@color/list_item_select"
                app:stv_corner="2dp"/>

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_only_reduce_position"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingTop="1dp"
                android:paddingRight="4dp"
                android:paddingBottom="1dp"
                android:text="只减仓"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                app:stv_corner="2dp"
                app:stv_solid="@color/list_item_select" />
        </LinearLayout>


        <com.coorchice.library.SuperTextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/cp_order_text68"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_12"
            app:stv_solid="@color/bg_color"
            app:stv_corner="4dp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal">
        <!--价格-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price_title"
                android:textSize="12sp"
                android:textColor="@color/normal_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/cp_order_text65" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/textStyle_select_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="0.014450" />

        </LinearLayout>


        <!--数量-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_volume_title"
                android:textSize="12sp"
                android:textColor="@color/normal_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/cp_order_text81" />

            <TextView
                android:id="@+id/tv_volume"
                style="@style/textStyle_select_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="0.014450" />

        </LinearLayout>


        <!--实际成交量-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_deal_title"
                android:textSize="12sp"
                android:textColor="@color/normal_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/cp_overview_text12" />

            <TextView
                android:id="@+id/tv_deal"
                style="@style/textStyle_select_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="--/--" />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dealvolume_key"
            android:textSize="12sp"
            android:textColor="@color/normal_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="成交数量(张)" />
        <TextView
            android:id="@+id/tv_totalvolume_key"
            android:textSize="12sp"
            android:textColor="@color/normal_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:text="委托数量(张)" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/pb_deal_volume"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:progress="10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:progressTint="@color/main_blue"
        android:progressBackgroundTint="#EDEFF2"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_height="5dp"/>
    <RelativeLayout
        android:layout_marginBottom="12dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dealvolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            style="@style/textStyle_value_82_10"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:text="17(58%)" />
        <TextView
            android:id="@+id/tv_totalvolume"
            style="@style/textStyle_value_82_10"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:text="32" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_half"
        android:background="@color/line_color" />

</LinearLayout>