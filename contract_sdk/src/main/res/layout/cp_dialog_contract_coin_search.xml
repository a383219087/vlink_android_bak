<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/bg_card_color">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/cp_overview_text35"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="24sp"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/text_color"
            android:layout_height="wrap_content"/>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_market_aa"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:clickable="true"
            app:tl_indicator_color="@color/main_blue"
            app:tl_indicator_corner_radius="@dimen/dp_2"
            app:tl_indicator_height="@dimen/dp_2"
            app:tl_indicator_width="@dimen/dp_16"
            app:tl_indicator_width_equal_title="false"
            app:tl_textBold="SELECT"
            app:tl_textSelectColor="@color/main_blue"
            app:tl_textUnSelectColor="@color/text_color"
            app:tl_textSize="@dimen/sp_14" />

        <View
            style="@style/common_horizon_line_style" />
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@null"
            android:drawableLeft="@drawable/cp_search"
            android:drawablePadding="@dimen/dp_10"
            android:hint="@string/cp_extra_text81"
            android:singleLine="true"
            android:textColor="@color/edit_hint_color"
            android:textSize="@dimen/sp_14" />
        <View
            style="@style/common_horizon_line_style" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_market_aa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_dissmiss"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:background="@color/transparent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>