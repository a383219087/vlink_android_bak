<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">
        <ImageView
            android:id="@+id/img_not_switch"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:src="@mipmap/switch_off"/>


        <ImageView
            android:id="@+id/img_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/switch_on"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/cp_extra_text_hold1"
            android:textColor="@color/normal_text_color"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/tv_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/bg_select_button_blue"
            android:textColor="@color/white"
            android:text="@string/cp_extra_text_hold2"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />






    </LinearLayout>


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_hold_contract"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:minHeight="@dimen/dp_200"
    android:overScrollMode="never" />

</LinearLayout>