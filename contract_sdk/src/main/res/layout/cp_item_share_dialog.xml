<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <FrameLayout
        android:id="@+id/rl_share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_share_layout"
            android:layout_width="match_parent"
            android:layout_height="486dp">

            <include
                layout="@layout/cp_hold_share_card"
                android:layout_width="match_parent"
                android:layout_height="486dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/cp_ic_baseline_close_24" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/rl_share_layout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@+id/tv_content_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/bg_select_button_white_fill"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_14"
            android:text="@string/cp_overview_text56"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@+id/tv_content_layout"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_select_button_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="@string/cp_content_text34"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>