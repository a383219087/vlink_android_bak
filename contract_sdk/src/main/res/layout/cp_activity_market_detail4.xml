<?xml version="1.0" encoding="utf-8"?><!--主界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_kline_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="@color/bg_color"
        android:layout_height="@dimen/page_head_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ib_back"
            style="@style/left_back_img_style"
            android:layout_alignParentLeft="true" />

        <View
            android:id="@+id/v_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/ib_back"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/ll_coin_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/v_line"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cp_exchange_sidepull" />

            <TextView
                android:id="@+id/tv_coin_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="XRP/USDT"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ib_collect"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/quotes_optional_default2" />

        <ImageView
            android:id="@+id/ib_share"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ib_collect"
            android:scaleType="centerInside"
            android:src="@drawable/cp_contract_kline_share" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/main.collapsing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_close_price"
                                    style="@style/textStyle_text_nor_bold_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textColor="@color/main_green"
                                    android:textSize="@dimen/sp_28"
                                    android:textStyle="bold"
                                    tools:text="4.96000000000" />

                                <TextView
                                    android:id="@+id/tv_rose"
                                    style="@style/textStyle_text_nor_12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="8dp"
                                    android:background="@drawable/cp_border_green_fill"
                                    android:ellipsize="end"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="3dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="3dp"
                                    android:singleLine="true"
                                    android:textColor="@color/main_green"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="+1.88%" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/tv_converted_close_price"
                                        style="@style/textStyle_text_nor_12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:ellipsize="end"
                                        android:singleLine="true"
                                        android:textColor="@color/normal_text_color"
                                        android:textSize="@dimen/sp_14"
                                        tools:text="≈0000000287690.05CNY" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/cp_extra_text111"
                                        android:textColor="@color/normal_text_color"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/cp_extra_text112"
                                        android:textColor="@color/normal_text_color"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="center_vertical"
                                        android:text="24H"
                                        android:textColor="@color/normal_text_color"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:gravity="right"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_high_price"
                                        style="@style/textStyle_tips_bold_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:gravity="center_vertical"
                                        android:text="--"
                                        android:textColor="@color/text_color"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/tv_low_price"
                                        style="@style/textStyle_tips_bold_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="center_vertical"
                                        android:text="--"
                                        android:textColor="@color/text_color"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/tv_24h_vol"
                                        style="@style/textStyle_tips_bold_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="center_vertical"
                                        android:text="--"
                                        android:textColor="@color/text_color"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>


                        <!--涨跌幅 & 高-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tv_cp_extra_text110"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:text="@string/cp_extra_text110"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/sp_12" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:textColor="@color/main_green"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="+1.88%" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right">

                                <TextView
                                    android:id="@+id/tv_high"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="@string/cp_extra_text111"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:ellipsize="end"
                                    android:gravity="right"
                                    android:singleLine="true"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="4162" />

                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl_ctrl"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:visibility="gone"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/cp_lever_fill"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingLeft="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:drawablePadding="5dp"
                                    android:text="@string/contract_account_equity"
                                    android:textColor="@color/colorA2A9BD"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_mark_price"
                                    style="@style/textStyle_tips_bold_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="--"
                                    android:textColor="@color/color00A88B"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="4162.99999" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:text="@string/opsition_gain_loss"
                                    android:textColor="@color/colorA2A9BD"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_capital_rate"
                                    style="@style/textStyle_tips_bold_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="--"
                                    android:textColor="@color/colorD8405A"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="0.00009%" />

                                <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="00:00:00"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/sp_12"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_15"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:text="@string/cp_overview_text21"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_index_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="--"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/sp_12"
                                    tools:text="4162.99999" />

                            </LinearLayout>


                            <!--24H-->

                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/ll_clean_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="right|center_vertical"
                            android:paddingRight="@dimen/dp_15"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_fund_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/sp_12"
                                tools:text="asdasdasd" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_clean_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_5"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    android:id="@+id/tv_clean_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_12"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:id="@+id/rg_main"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <com.chainup.contract.view.CpLabelRadioButton
                                    android:id="@+id/rb_ma"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:button="@null"
                                    android:fontFamily="@font/dinpro_medium"
                                    android:gravity="center"
                                    android:text="MA"
                                    android:textColor="@drawable/cp_kline_index_text_selector"
                                    android:textSize="@dimen/sp_12" />

                                <com.chainup.contract.view.CpLabelRadioButton
                                    android:id="@+id/rb_boll"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:button="@null"
                                    android:fontFamily="@font/dinpro_medium"
                                    android:gravity="center"
                                    android:text="BOLL"
                                    android:textColor="@drawable/cp_kline_index_text_selector"
                                    android:textSize="@dimen/sp_12" />

                            </RadioGroup>

                            <View
                                android:layout_width="@dimen/dp_half"
                                android:layout_height="match_parent"
                                android:background="@color/kline_grid_line" />

                            <RadioGroup
                                android:id="@+id/rg_vice"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.chainup.contract.view.CpLabelRadioButton
                                    android:id="@+id/rb_macd"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:button="@null"
                                    android:fontFamily="@font/dinpro_medium"
                                    android:gravity="center"
                                    android:text="MACD"
                                    android:textColor="@drawable/cp_kline_index_text_selector"
                                    android:textSize="@dimen/sp_12" />

                                <com.chainup.contract.view.CpLabelRadioButton
                                    android:id="@+id/rb_kdj"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:button="@null"
                                    android:fontFamily="@font/dinpro_medium"
                                    android:gravity="center"
                                    android:text="KDJ"
                                    android:textColor="@drawable/cp_kline_index_text_selector"
                                    android:textSize="@dimen/sp_12" />

                                <com.chainup.contract.view.CpLabelRadioButton
                                    android:id="@+id/rb_rsi"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:button="@null"
                                    android:fontFamily="@font/dinpro_medium"
                                    android:gravity="center"
                                    android:text="RSI"
                                    android:textColor="@drawable/cp_kline_index_text_selector"
                                    android:textSize="@dimen/sp_12" />

                                <com.chainup.contract.view.CpLabelRadioButton
                                    android:id="@+id/rb_wr"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:button="@null"
                                    android:fontFamily="@font/dinpro_medium"
                                    android:gravity="center"
                                    android:text="WR"
                                    android:textColor="@drawable/cp_kline_index_text_selector"
                                    android:textSize="@dimen/sp_12" />
                            </RadioGroup>

                        </LinearLayout>

                        <!--K线部分-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_card_color"
                            android:orientation="vertical">

                            <!--K线的控制项-->
                            <RelativeLayout
                                android:id="@+id/rl_kline_ctrl"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_30"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/kline_tab_indicator"
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_2"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/cp_shape_kline_tab_indicator" />

                                <!--刻度-->
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_kline_ctrl"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="0dp"
                                    android:layout_toLeftOf="@+id/tv_landscape"
                                    tools:itemCount="8"
                                    tools:listitem="@layout/cp_item_kline_ctrl" />

                                <com.chainup.contract.view.CpLabelTextView
                                    android:id="@+id/tv_scale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:gravity="center_horizontal|bottom"
                                    android:paddingLeft="@dimen/dp_15"
                                    android:paddingRight="@dimen/dp_15"
                                    android:paddingBottom="-5dp"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/sp_12"
                                    android:visibility="gone"
                                    app:label_backgroundColor="@color/normal_icon_color"
                                    app:label_distance="0dp"
                                    app:label_height="@dimen/dp_4"
                                    app:label_orientation="RIGHT_BOTTOM"
                                    app:label_text=""
                                    app:label_textSize="@dimen/sp_12"
                                    app:label_textStyle="NORMAL"
                                    tools:text="30" />


                                <!--更多-->
                                <com.chainup.contract.view.CpLabelTextView
                                    android:id="@+id/tv_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:gravity="center_horizontal|bottom"
                                    android:paddingLeft="@dimen/dp_8"
                                    android:paddingRight="@dimen/dp_8"
                                    android:paddingBottom="-5dp"
                                    android:text="更多"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/sp_12"
                                    android:visibility="gone"
                                    app:label_backgroundColor="@color/normal_icon_color"
                                    app:label_distance="0dp"
                                    app:label_height="@dimen/dp_4"
                                    app:label_orientation="RIGHT_BOTTOM"
                                    app:label_text=""
                                    app:label_textSize="@dimen/sp_12"
                                    app:label_textStyle="NORMAL" />

                                <!--指标-->
                                <com.chainup.contract.view.CpLabelTextView
                                    android:id="@+id/tv_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:layout_toLeftOf="@+id/tv_landscape"
                                    android:gravity="center_horizontal|bottom"
                                    android:paddingLeft="@dimen/dp_8"
                                    android:paddingRight="@dimen/dp_8"
                                    android:paddingBottom="-5dp"
                                    android:text="@string/cp_extra_text154"
                                    android:textColor="@color/normal_text_color"
                                    android:textSize="@dimen/sp_12"
                                    android:visibility="gone"
                                    app:label_backgroundColor="@color/normal_icon_color"
                                    app:label_distance="0dp"
                                    app:label_height="@dimen/dp_4"
                                    app:label_orientation="RIGHT_BOTTOM"
                                    app:label_text=""
                                    app:label_textSize="@dimen/sp_12"
                                    app:label_textStyle="NORMAL" />
                                <!--横屏视图-->
                                <ImageView
                                    android:id="@+id/tv_landscape"
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="6dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/cp_quotes_zoom" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_half"
                                android:background="@color/line_color" />


                            <!--TODO Kline视图-->
                            <FrameLayout
