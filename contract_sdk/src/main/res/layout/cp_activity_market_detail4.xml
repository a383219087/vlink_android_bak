<?xml version="1.0" encoding="utf-8"?><!--主界面-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ll_kline_view"
    android:background="@color/bg_card_color"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_head_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ib_back"
            style="@style/left_back_img_style"
            android:layout_alignParentLeft="true" />

        <View
            android:id="@+id/v_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/ib_back"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/ll_coin_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/v_line"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cp_exchange_sidepull" />

            <TextView
                android:id="@+id/tv_coin_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="XRP/USDT"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ib_collect"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ib_share"
            android:padding="@dimen/dp_15"
            android:src="@drawable/cp_quotes_optional_default"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ib_share"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/cp_contract_kline_share" />
    </RelativeLayout>

    <com.chainup.contract.view.CpVerticalScrollExtView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/rl_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_close_price"
                        style="@style/textStyle_text_nor_bold_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/main_green"
                        android:textSize="@dimen/sp_28"
                        android:textStyle="bold"
                        tools:text="4.96000000000" />

                    <TextView
                        android:id="@+id/tv_rose"
                        style="@style/textStyle_text_nor_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/cp_border_green_fill"
                        android:singleLine="true"
                        android:textColor="@color/main_green"
                        android:textSize="@dimen/sp_12"
                        tools:text="+1.88%" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_converted_close_price"
                            style="@style/textStyle_text_nor_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/normal_text_color"
                            android:textSize="@dimen/sp_14"
                            tools:text="≈0000000287690.05CNY" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:text="@string/cp_extra_text111"
                            android:textColor="@color/normal_text_color"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_height="20dp"
                            android:text="@string/cp_extra_text112"
                            android:gravity="center_vertical"
                            android:textColor="@color/normal_text_color"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:text="24H"
                            android:gravity="center_vertical"
                            android:textColor="@color/normal_text_color"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_high_price"
                            style="@style/textStyle_tips_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="--"
                            android:gravity="center_vertical"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tv_low_price"
                            style="@style/textStyle_tips_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:text="--"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tv_24h_vol"
                            style="@style/textStyle_tips_bold_14"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="--"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/text_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <!--涨跌幅 & 高-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_cp_extra_text110"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="@string/cp_extra_text110"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/main_green"
                        android:textSize="@dimen/sp_12"
                        tools:text="+1.88%" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/tv_high"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/cp_extra_text111"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="4162" />

                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/cp_lever_fill"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:drawableLeft="@drawable/cp_price_tag"
                        android:drawablePadding="5dp"
                        android:text="@string/cp_overview_text20"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_mark_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="--"
                        style="@style/textStyle_tips_bold_14"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="4162.99999" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="@string/cp_overview_text26"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_capital_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="--"
                        style="@style/textStyle_tips_bold_14"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="0.00009%" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:text="00:00:00"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="@string/cp_overview_text21"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_index_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="--"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="4162.99999" />

                </LinearLayout>


                <!--24H-->

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="asdasdasd" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_clean_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

            </RelativeLayout>

            <!--K线部分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/bg_card_color"
                android:orientation="vertical">

                <!--K线的控制项-->
                <RelativeLayout
                    android:id="@+id/rl_kline_ctrl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:gravity="center_vertical">
                    <View
                        android:id="@+id/kline_tab_indicator"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_2"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/cp_shape_kline_tab_indicator" />

                    <!--刻度-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_kline_ctrl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0dp"
                        android:layout_toLeftOf="@+id/tv_landscape"
                        tools:itemCount="8"
                        tools:listitem="@layout/cp_item_kline_ctrl" />

                    <com.chainup.contract.view.CpLabelTextView
                        android:id="@+id/tv_scale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingBottom="-5dp"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12"
                        app:label_backgroundColor="@color/normal_icon_color"
                        app:label_distance="0dp"
                        app:label_height="@dimen/dp_4"
                        app:label_orientation="RIGHT_BOTTOM"
                        app:label_text=""
                        app:label_textSize="@dimen/sp_12"
                        app:label_textStyle="NORMAL"
                        tools:text="30" />


                    <!--更多-->
                    <com.chainup.contract.view.CpLabelTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:paddingBottom="-5dp"
                        android:visibility="gone"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12"
                        app:label_backgroundColor="@color/normal_icon_color"
                        app:label_distance="0dp"
                        android:text="更多"
                        app:label_height="@dimen/dp_4"
                        app:label_orientation="RIGHT_BOTTOM"
                        app:label_text=""
                        app:label_textSize="@dimen/sp_12"
                        app:label_textStyle="NORMAL"/>

                    <!--指标-->
                    <com.chainup.contract.view.CpLabelTextView
                        android:id="@+id/tv_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom"
                        android:paddingLeft="@dimen/dp_8"
                        android:paddingRight="@dimen/dp_8"
                        android:visibility="gone"
                       android:layout_toLeftOf="@+id/tv_landscape"
                        android:paddingBottom="-5dp"
                        android:text="@string/cp_extra_text154"
                        android:textColor="@color/normal_text_color"
                        android:textSize="@dimen/sp_12"
                        app:label_backgroundColor="@color/normal_icon_color"
                        app:label_distance="0dp"
                        app:label_height="@dimen/dp_4"
                        app:label_orientation="RIGHT_BOTTOM"
                        app:label_text=""
                        app:label_textSize="@dimen/sp_12"
                        app:label_textStyle="NORMAL" />
                    <!--横屏视图-->
                    <ImageView
                        android:id="@+id/tv_landscape"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="6dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/cp_quotes_zoom" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_half"
                    android:background="@color/line_color" />


                <!--TODO Kline视图-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.yjkj.chainup.kline.view.CpKLineChartView
                        android:id="@+id/v_kline"
                        android:layout_width="match_parent"
                        android:layout_height="410dp"
                        android:nestedScrollingEnabled="false"
                        app:kc_background_color="@color/bg_card_color"
                        app:kc_grid_line_color="@color/kline_grid_line"
                        app:kc_marker_value_color="@color/chart_max_min"
                        app:kc_selector_background_color="@color/marker_bg"
                        app:kc_text_color="@color/text_color" />
                    <!--K线图的指标-->
                    <include
                        android:id="@+id/ly_kline_panel"
                        layout="@layout/cp_market_info_kline_panel"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_kline_scale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/tabbar_color"
                        android:overScrollMode="never"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_20"
                        android:layout_gravity="bottom|left"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_100"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:usesCleartextTraffic="true"
                        tools:visibility="visible" />

                    <include
                        android:id="@+id/customize_depth_chart"
                        android:visibility="gone"
                        layout="@layout/cp_depth_chart_com"/>

                </FrameLayout>


            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:background="@color/bg_color"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_card_color"
                android:orientation="vertical">

                <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/stl_depth_dealt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:clickable="true"
                    app:tl_indicator_color="@color/main_blue"
                    app:tl_indicator_corner_radius="@dimen/dp_2"
                    app:tl_indicator_height="@dimen/dp_2"
                    app:tl_indicator_width="@dimen/dp_16"
                    app:tl_indicator_width_equal_title="false"
                    app:tl_textBold="BOTH"
                    app:tl_textSelectColor="@color/main_blue"
                    app:tl_textSize="@dimen/sp_16"
                    app:tl_tab_space_equal="true"
                    app:tl_textUnSelectColor="@color/normal_text_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_half"
                    android:background="@color/line_color" />

                <com.chainup.contract.view.CpWrapContentViewPager
                    android:id="@+id/vp_depth_dealt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />
            </LinearLayout>
        </LinearLayout>

    </com.chainup.contract.view.CpVerticalScrollExtView>
    <ImageView
        android:id="@+id/line"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_ctrl"
        android:layout_width="match_parent"
        android:background="@color/line_color"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/ll_bottom_ctrl"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:background="@color/bg_card_color"
        android:layout_height="wrap_content">
        <com.chainup.contract.view.CpCommonlyUsedButton
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="20dp"
            app:bgColor="@color/main_green"
            android:layout_marginLeft="15dp"
            app:layout_constraintHorizontal_weight="1"
            app:bottonTextContent="买入" />

        <com.chainup.contract.view.CpCommonlyUsedButton
            android:id="@+id/btn_sell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_4"
            app:bgColor="@color/main_red"
            android:layout_marginBottom="20dp"
            app:bottonTextContent="卖出"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

