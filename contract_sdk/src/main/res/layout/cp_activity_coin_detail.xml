<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_card_color"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:scaleType="centerInside"
            android:src="@drawable/cp_ic_return"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:text="USDT"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <LinearLayout
        app:layout_collapseMode="parallax"
        android:orientation="vertical"
        android:background="@color/bg_card_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_total_asset_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_total_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/dinpro_medium"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="123123" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_cross_balance_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="123123" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用资产"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_canuse_balance"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/dinpro_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="123123" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_coaccount_lockmargin"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_freeze_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/dinpro_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="123123" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_cross_balance_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_all_margin_balance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/dinpro_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="123123" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_isolated_balance_str"
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/tv_small_margin_balance_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:fontFamily="@font/dinpro_medium"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="123123" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <TextView
            android:id="@+id/tv_coin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/cp_extra_text143"
            android:textColor="@color/text_color"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/ll_tab_type"
            android:gravity="center|right"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_tab_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cp_order_text4"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/cp_dropdown_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/bg_card_color"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:background="@color/bg_card_color"
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginTop="70dp"
            app:expandedTitleMarginStart="@dimen/dp_15"
            app:expandedTitleTextAppearance="@dimen/sp_28"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:subtitleTextAppearance="@dimen/sp_14"
            app:titleEnabled="true"
            app:title="USDT"
            app:titleTextColor="@color/text_color">


            <androidx.appcompat.widget.Toolbar
                android:gravity="center_vertical"
                android:id="@+id/toolbar"
                android:background="@color/bg_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/return_daytime"
                app:titleTextColor="@color/text_color" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_card_color"
        android:minHeight="500dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:itemCount="20" />

</LinearLayout>

