<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    app:cardBackgroundColor="@color/bg_card_color"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="502dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/cp_tip_text15"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="visible" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_title"
            android:scrollbars="none"
            android:layout_above="@+id/ll_bottom"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_tip_text16"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_profit_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/cp_tip_text17"
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_loss_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_tip_text18"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_loss_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/cp_tip_text19"
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_tip_text20"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/cp_tip_text21"
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cp_tip_text22"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/cp_tip_text23"
                    android:textColor="@color/normal_text_color"
                    android:textSize="14sp" />

            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="right|center_vertical"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_content_layout"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_44"
                android:layout_below="@+id/tv_content_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/bg_select_button_white"
                android:textColor="@color/main_blue"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_44"
                android:layout_below="@+id/tv_content_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_select_button_blue"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textAllCaps="false"
                android:text="@string/cp_extra_text28"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>