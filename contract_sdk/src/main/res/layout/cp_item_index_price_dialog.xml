<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:background="@drawable/cp_bg_item_dialog_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_1"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_6"
                android:text="@string/cp_overview_text20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_tag_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10701.1"
                android:layout_marginLeft="8dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/cp_stoporder_text8"
            android:layout_marginTop="8dp"
            style="@style/textStyle_tips_12"
            android:textColor="#6A7A97"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_6"
                android:text="@string/cp_overview_text21"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_index_price"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10701.1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/cp_stoporder_text7"
            android:layout_marginTop="8dp"
            style="@style/textStyle_tips_12"
            android:textColor="#6A7A97"
            android:textSize="@dimen/sp_14" />


        <Button
            android:id="@+id/tv_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@+id/rl_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_select_button_blue"
            android:text="@string/cp_extra_text28"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>