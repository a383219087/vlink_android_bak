    <style name="TopDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/dialogTopAnim</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景有灰度 -->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="dialogTopAnim">
        <item name="android:windowEnterAnimation">@anim/top_dialog_appear</item>
        <item name="android:windowExitAnimation">@anim/top_dialog_disappear</item>
    </style>

    <style name="dialogBottomAnim">
        <item name="android:windowEnterAnimation">@anim/cp_slide_down_in</item>
        <item name="android:windowExitAnimation">@anim/cp_slide_down_out</item>
