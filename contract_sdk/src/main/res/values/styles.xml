<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_color</item>
        <item name="colorPrimaryDark">@color/bg_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoBackGroundDialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="leftin_rightout_DialogFg_animstyle_buff" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/cp_slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/cp_slide_left_out</item>
    </style>
    <!--左上角返回箭头样式-->
    <style name="left_back_img_style">
        <item name="android:layout_width">@dimen/page_head_height</item>
        <item name="android:layout_height">@dimen/page_head_height</item>
        <item name="android:src">@drawable/cp_ic_return</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="common_horizon_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_line_height</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!--右箭头样式-->
    <style name="right_arrow_img_style">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/cp_enter</item>
    </style>
    <style name="leftin_rightout_DialogFg_animstyle" parent="android:Animation">
        <!--<item name="android:windowEnterAnimation">@android:anim/translucent_exit</item>
        <item name="android:windowExitAnimation">@android:anim/translucent_enter</item>-->
        <item name="android:windowEnterAnimation">@anim/cp_slide_right_out</item>
        <item name="android:windowExitAnimation">@anim/cp_slide_left_in_v2</item>
    </style>
    <style name="ToolbarType_riches">
        <item name="tl_textSelectColor">@color/main_blue</item>
        <item name="tl_textUnSelectColor">@color/normal_text_color</item>
        <item name="tl_indicator_color">@color/main_color</item>
        <item name="tl_textSize">@dimen/sp_16</item>
        <item name="tl_textBold">SELECT</item>
        <item name="tl_indicator_corner_radius">@dimen/dp_1_5</item>
        <item name="tl_indicator_style">NORMAL</item>
        <item name="tl_indicator_height">@dimen/dp_2</item>
        <item name="tl_indicator_width">26dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="tl_iconVisible">false</item>
        <item name="tl_tab_space_equal">false</item>
    </style>
    <style name="ToolbarType_bar_home_tab" parent="@style/ToolbarType_riches">
        <item name="android:paddingTop">0dp</item>
        <item name="tl_indicator_color">@color/transparent</item>
        <item name="tl_tab_padding">@dimen/dp_18</item>
        <item name="tl_textSelectColor">@color/main_blue</item>
        <item name="tl_textBold">BOTH</item>
    </style>

    <style name="textStyle_title_bold">
        <item name="android:fontFamily">@font/dinpro_medium</item>
    </style>

    <style name="textStyle_title_14" parent="textStyle_title_bold">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
